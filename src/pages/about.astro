---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const values = [
  { icon: 'target', title: 'Focus', desc: "We specialise in one thing: keeping WordPress sites running smoothly. That focus means we're very good at what we do." },
  { icon: 'shield', title: 'Transparency', desc: "No hidden fees, no surprise charges. We're upfront about what's included and what isn't." },
  { icon: 'clock', title: 'Responsiveness', desc: 'Same-day support, usually within hours. Real people who actually answer.' },
  { icon: 'ireland', title: 'Irish', desc: "We work Irish hours, understand GDPR, and know Irish SMEs. When you contact us, you're talking to someone who gets it." },
];

const stats = [
  { value: '99.9%', label: 'Uptime' },
  { value: '<4hrs', label: 'Response' },
  { value: 'Irish', label: 'Support' },
];

// Organization schema for about page
const aboutPageSchema = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  "name": "About SparkHost.ie",
  "description": "SparkHost is an Irish WordPress hosting company providing managed hosting and maintenance services for businesses across Ireland.",
  "url": "https://sparkhost.ie/about",
  "mainEntity": {
    "@type": "Organization",
    "name": "SparkHost.ie",
    "url": "https://sparkhost.ie",
    "logo": "https://sparkhost.ie/SparkHost-dark.svg",
    "description": "Irish WordPress hosting and maintenance company based in Dublin, providing managed hosting services for Irish businesses.",
    "foundingLocation": {
      "@type": "Place",
      "name": "Dublin, Ireland"
    },
    "areaServed": {
      "@type": "Country",
      "name": "Ireland"
    },
    "parentOrganization": {
      "@type": "Organization",
      "name": "Everblue Digital",
      "url": "https://everbluedigital.com"
    }
  }
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://sparkhost.ie"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "About",
      "item": "https://sparkhost.ie/about"
    }
  ]
};
---

<Layout
  title="About SparkHost | Irish WordPress Hosting Company | Dublin, Ireland"
  description="SparkHost.ie is an Irish WordPress hosting company based in Dublin. We provide managed WordPress hosting with local support for Irish businesses."
>
  <!-- Structured Data / Schema Markup -->
  <script type="application/ld+json" set:html={JSON.stringify(aboutPageSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

  <Header currentPath="/about" />

  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-16">
      <div class="container">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">Irish WordPress Hosting Company</span>
            <h1 class="text-4xl md:text-5xl font-bold mb-6" style="font-family: var(--font-display);">
              About <span class="text-gradient-spark">SparkHost.ie</span>
            </h1>
            <p class="text-xl text-white/60 leading-relaxed">
              SparkHost is a Dublin-based <strong class="text-white/80">WordPress hosting company</strong>, built from years of managing WordPress sites for Irish businesses. We provide <a href="/services" class="text-[var(--color-spark-orange)] hover:underline">managed WordPress hosting</a> with real Irish support.
            </p>
          </div>
          <div class="grid grid-cols-3 gap-4">
            {stats.map(stat => (
              <div class="card-glass p-5 text-center">
                <div class="text-2xl md:text-3xl font-bold text-gradient-spark mb-1" style="font-family: var(--font-display);">{stat.value}</div>
                <p class="text-xs text-white/50">{stat.label}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- The Problem -->
    <section class="py-16">
      <div class="container">
        <div class="container-narrow mx-auto">
          <div class="card-glass p-6 md:p-8">
            <h2 class="text-2xl font-bold mb-5" style="font-family: var(--font-display);">Why Irish Businesses Need Better WordPress Hosting</h2>
            <div class="space-y-4 text-white/70 leading-relaxed">
              <p>Business owners stuck maintaining their own sites, paying agency rates for basic updates, or dealing with hosting companies that treat support as an afterthought.</p>
              <p><strong class="text-white">Agencies</strong> charge €150+/hour for basic content changes. <strong class="text-white">DIY maintenance</strong> eats into time you don't have. <strong class="text-white">Budget hosting</strong> means slow sites and security issues.</p>
              <p>Irish SMEs deserved a better option.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Solution -->
    <section class="py-16">
      <div class="container">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4" style="font-family: var(--font-display);">
            Our <span class="text-gradient-spark">WordPress Hosting Values</span>
          </h2>
          <p class="text-lg text-white/60 max-w-xl mx-auto">
            Fixed monthly <a href="/pricing" class="text-[var(--color-spark-orange)] hover:underline">WordPress hosting pricing</a>, genuine security, and support from people who actually answer.
          </p>
        </div>

        <div class="grid sm:grid-cols-2 gap-6">
          {values.map(value => (
            <div class="card-glass p-6">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-[var(--color-spark-red)]/20 to-[var(--color-spark-orange)]/20 flex items-center justify-center flex-shrink-0">
                  {value.icon === 'target' && (
                    <svg class="w-5 h-5 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                    </svg>
                  )}
                  {value.icon === 'shield' && (
                    <svg class="w-5 h-5 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                  )}
                  {value.icon === 'clock' && (
                    <svg class="w-5 h-5 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  )}
                  {value.icon === 'ireland' && (
                    <svg class="w-5 h-5 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  )}
                </div>
                <div>
                  <h3 class="text-lg font-semibold mb-2" style="font-family: var(--font-display);">{value.title}</h3>
                  <p class="text-white/60 text-sm leading-relaxed">{value.desc}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Our Approach -->
    <section class="py-16">
      <div class="container">
        <div class="grid lg:grid-cols-2 gap-10 items-start">
          <div>
            <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">WordPress Hosting Specialists</span>
            <h2 class="text-3xl font-bold mb-6" style="font-family: var(--font-display);">WordPress Maintenance Done Right</h2>
            <div class="space-y-4 text-white/70 leading-relaxed">
              <p>We're not a design agency, a marketing firm, or a development shop. We're your <strong class="text-white/80">WordPress maintenance team</strong>.</p>
              <p>That focus means every process is refined. Every <a href="/faq#security" class="text-[var(--color-spark-orange)] hover:underline">security measure</a> is proven. Every support response is fast.</p>
              <p>This isn't a limitation — it's how we keep prices fair and quality high.</p>
            </div>
          </div>

          <div class="card-glass p-6">
            <h3 class="text-lg font-semibold mb-4" style="font-family: var(--font-display);">Need More Than Hosting?</h3>
            <p class="text-white/60 text-sm mb-4">Our sister company <a href="https://everbluedigital.com" target="_blank" rel="noopener" class="text-[var(--color-spark-orange)] hover:underline">Everblue Digital</a> handles:</p>
            <ul class="space-y-2 text-white/60 text-sm">
              {['Website design & development', 'SEO & digital marketing', 'Google Ads & paid advertising', 'Branding & visual identity', 'Business automation & CRM'].map(item => (
                <li class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-[var(--color-spark-orange)] flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  {item}
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Ireland -->
    <section class="py-16">
      <div class="container">
        <div class="container-narrow mx-auto text-center">
          <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-[var(--color-spark-red)]/20 to-[var(--color-spark-orange)]/20 flex items-center justify-center mx-auto mb-6">
            <svg class="w-7 h-7 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h2 class="text-3xl font-bold mb-6" style="font-family: var(--font-display);">
            Why Choose <span class="text-gradient-spark">Irish WordPress Hosting</span>?
          </h2>
          <div class="space-y-4 text-white/70 leading-relaxed">
            <p>We're based in <strong class="text-white/80">Dublin, Ireland</strong>. We work Irish hours. We understand GDPR, Irish business practices, and the specific needs of SMEs in this market.</p>
            <p>When you <a href="/contact" class="text-[var(--color-spark-orange)] hover:underline">contact our team</a> via email or WhatsApp, you're talking to someone who gets it — not a call centre reading from a script.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Everblue Connection -->
    <section class="py-16">
      <div class="container">
        <div class="container-narrow mx-auto">
          <div class="card-glass p-6 md:p-8">
            <div class="flex flex-col sm:flex-row items-start gap-6">
              <div class="w-16 h-16 rounded-xl bg-gradient-to-br from-blue-500/20 to-blue-600/20 flex items-center justify-center flex-shrink-0">
                <svg class="w-8 h-8 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold mb-3" style="font-family: var(--font-display);">A Service by Everblue Digital</h3>
                <div class="space-y-3 text-white/70 text-sm leading-relaxed">
                  <p>SparkHost was born from Everblue Digital's experience managing websites for Irish businesses. We saw the gap between expensive agency support and unreliable budget hosting.</p>
                  <p>Everblue handles web design and development. SparkHost focuses purely on hosting and maintenance — doing one thing exceptionally well.</p>
                </div>
                <a href="https://everbluedigital.com" target="_blank" rel="noopener" class="inline-flex items-center gap-2 text-[var(--color-spark-orange)] hover:text-[var(--color-spark-red)] font-medium transition-colors text-sm mt-4">
                  Visit Everblue Digital
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16">
      <div class="container">
        <div class="text-center">
          <h2 class="text-2xl md:text-3xl font-bold mb-6" style="font-family: var(--font-display);">Ready for <span class="text-gradient-spark">Managed WordPress Hosting</span>?</h2>
          <p class="text-lg text-white/60 mb-8 max-w-xl mx-auto">
            Book a free call to discuss your WordPress site. We'll give you an honest assessment of your <a href="/services" class="text-[var(--color-spark-orange)] hover:underline">hosting needs</a>.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/get-started" class="btn-spark" title="Get started with WordPress hosting Ireland">
              <span>Start WordPress Hosting</span>
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-label="Arrow right">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a href="/contact" class="btn-outline" title="Book a free WordPress consultation">Book a Free Call</a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
