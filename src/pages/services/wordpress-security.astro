---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import BlogCardGrid from '../../components/BlogCardGrid.astro';

const securityFeatures = [
  {
    title: 'Web Application Firewall',
    description: 'Patchstack WAF blocks known vulnerabilities before they can be exploited. Enterprise-grade protection.',
    icon: 'shield'
  },
  {
    title: 'Malware Scanning',
    description: 'Daily automated scans detect suspicious files, backdoors, and malicious code before damage occurs.',
    icon: 'search'
  },
  {
    title: 'Brute Force Protection',
    description: 'Intelligent rate limiting and login attempt monitoring blocks automated password attacks.',
    icon: 'lock'
  },
  {
    title: 'DDoS Protection',
    description: 'Cloudflare integration absorbs traffic floods before they reach your server.',
    icon: 'cloud'
  },
  {
    title: 'Automatic Updates',
    description: 'Security patches applied promptly with testing to ensure nothing breaks.',
    icon: 'refresh'
  },
  {
    title: 'SSL/TLS Certificates',
    description: 'Free HTTPS encryption for all sites. Automatic renewal, zero configuration.',
    icon: 'certificate'
  },
];

const proactiveMeasures = [
  'Cloudflare CDN & WAF',
  'Patchstack vulnerability monitoring',
  'Login attempt limiting',
  'File integrity monitoring',
  'Database security hardening',
  'Secure file permissions',
];

const reactiveMeasures = [
  'Daily malware scanning',
  'Uptime monitoring (24/7)',
  'Vulnerability alerts',
  'Security incident response',
  'Hack recovery assistance',
  'Security audit reports',
];

const faqs = [
  {
    question: "What's included in WordPress security?",
    answer: "Our security includes Cloudflare WAF and DDoS protection, daily malware scanning, brute force protection, automatic security patches, SSL certificates, and uptime monitoring. The Managed plan adds Patchstack real-time protection, hack recovery, and quarterly security reports."
  },
  {
    question: "How quickly are security patches applied?",
    answer: "Critical security patches are applied within 24-48 hours of release. We monitor advisories from Patchstack, Wordfence, and WordPress.org to catch vulnerabilities early. Non-critical updates are applied during weekly maintenance after staging tests."
  },
  {
    question: "What happens if my site gets hacked?",
    answer: "On our Managed plan, hack recovery is included at no extra cost. We isolate the infection, restore from clean backups, identify the entry point, patch the vulnerability, and implement additional protections. Most sites are fully recovered within 24-48 hours."
  },
  {
    question: "Do I need additional security plugins?",
    answer: "No. Our hosting includes enterprise-grade security features (Patchstack, Cloudflare, malware scanning) that typically cost €200-300/year separately. You don't need Wordfence, Sucuri, or other security plugins — we handle security at the infrastructure level."
  },
  {
    question: "Is my data safe with SparkHost?",
    answer: "Yes. All sites are protected with free SSL/TLS certificates (HTTPS). Backups are encrypted and stored in geographically separate locations. All data is stored in secure European data centres. We're fully GDPR compliant."
  },
  {
    question: "How do you protect against brute force attacks?",
    answer: "Multiple layers: Cloudflare filters malicious traffic at the edge, we rate-limit login attempts, and block IPs after repeated failures. For Managed plans, we can also implement two-factor authentication and custom login URLs."
  },
];

// Schema markup
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "WordPress Security",
  "name": "WordPress Security Services Ireland",
  "description": "Professional WordPress security services for Irish businesses. Includes firewall protection, malware scanning, DDoS protection, and hack recovery.",
  "provider": {
    "@type": "Organization",
    "name": "SparkHost.ie",
    "url": "https://sparkhost.ie"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Ireland"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "WordPress Security Plans",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Standard WordPress Security",
          "description": "WordPress hosting with Cloudflare protection, malware scanning, and SSL"
        },
        "price": "40",
        "priceCurrency": "EUR"
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Managed WordPress Security",
          "description": "Premium security with Patchstack WAF, hack recovery, and security reporting"
        },
        "price": "249",
        "priceCurrency": "EUR"
      }
    ]
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://sparkhost.ie"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Services",
      "item": "https://sparkhost.ie/services"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "WordPress Security",
      "item": "https://sparkhost.ie/services/wordpress-security"
    }
  ]
};
---

<Layout
  title="WordPress Security Services Ireland | Malware Protection & Hack Recovery | SparkHost.ie"
  description="Protect your Irish business website with enterprise-grade WordPress security. Includes Patchstack WAF, malware scanning, DDoS protection, and 24/7 monitoring."
>
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

  <Header currentPath="/services" />

  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-20">
      <div class="container">
        <div class="max-w-3xl">
          <!-- Breadcrumb -->
          <nav class="flex items-center gap-2 text-sm text-white/50 mb-6">
            <a href="/" class="hover:text-white transition-colors">Home</a>
            <span>/</span>
            <a href="/services" class="hover:text-white transition-colors">Services</a>
            <span>/</span>
            <span class="text-white/70">WordPress Security</span>
          </nav>

          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">WordPress Security Ireland</span>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6" style="font-family: var(--font-display);">
            WordPress Security <span class="text-gradient-spark">Services</span>
          </h1>
          <p class="text-xl text-white/60 leading-relaxed mb-8">
            Your website faces thousands of attacks daily. Our multi-layered <strong class="text-white/80">WordPress security</strong> stops threats before they reach your site — so you can focus on running your business.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/pricing" class="btn-spark">
              <span>View Security Plans</span>
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a href="/contact" class="btn-outline">
              Request Security Audit
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Security Matters -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold mb-6" style="font-family: var(--font-display);">
              Why WordPress Security <span class="text-gradient-spark">Matters</span>
            </h2>
            <div class="space-y-4 text-white/70">
              <p>
                WordPress powers over 40% of all websites, making it the #1 target for hackers. <strong class="text-white">90,000+ attacks happen every minute</strong> — and most target outdated plugins and weak passwords.
              </p>
              <p>
                A hacked site doesn't just mean downtime. It means lost customers, damaged reputation, potential <a href="/blog/gdpr-wordpress-compliance" class="text-[var(--color-spark-orange)] hover:underline">GDPR fines</a>, and recovery costs that dwarf the price of proper protection.
              </p>
              <p>
                Professional security isn't optional — it's essential protection for your online business.
              </p>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div class="card-glass p-6 text-center">
              <div class="text-4xl font-bold text-gradient-spark mb-2" style="font-family: var(--font-display);">90K+</div>
              <p class="text-sm text-white/60">WordPress attacks per minute globally</p>
            </div>
            <div class="card-glass p-6 text-center">
              <div class="text-4xl font-bold text-gradient-spark mb-2" style="font-family: var(--font-display);">44%</div>
              <p class="text-sm text-white/60">of hacks due to vulnerable plugins</p>
            </div>
            <div class="card-glass p-6 text-center">
              <div class="text-4xl font-bold text-gradient-spark mb-2" style="font-family: var(--font-display);">€10K</div>
              <p class="text-sm text-white/60">average cost to recover from a hack</p>
            </div>
            <div class="card-glass p-6 text-center">
              <div class="text-4xl font-bold text-gradient-spark mb-2" style="font-family: var(--font-display);">83%</div>
              <p class="text-sm text-white/60">of hacked CMS sites were WordPress</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- What's Included -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="text-center max-w-2xl mx-auto mb-12">
          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">Comprehensive Protection</span>
          <h2 class="text-3xl md:text-4xl font-bold mb-4" style="font-family: var(--font-display);">
            What's Included in Our <span class="text-gradient-spark">WordPress Security</span>
          </h2>
          <p class="text-white/60">
            Multiple layers of protection working together to keep your WordPress site secure.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {securityFeatures.map((feature) => (
            <div class="card-glass p-6">
              <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-[var(--color-spark-red)]/20 to-[var(--color-spark-orange)]/20 flex items-center justify-center mb-4">
                {feature.icon === 'shield' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                )}
                {feature.icon === 'search' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
                  </svg>
                )}
                {feature.icon === 'lock' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
                  </svg>
                )}
                {feature.icon === 'cloud' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.25 15a4.5 4.5 0 004.5 4.5H18a3.75 3.75 0 001.332-7.257 3 3 0 00-3.758-3.848 5.25 5.25 0 00-10.233 2.33A4.502 4.502 0 002.25 15z" />
                  </svg>
                )}
                {feature.icon === 'refresh' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                  </svg>
                )}
                {feature.icon === 'certificate' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z" />
                  </svg>
                )}
              </div>
              <h3 class="text-lg font-semibold mb-2" style="font-family: var(--font-display);">{feature.title}</h3>
              <p class="text-white/60 text-sm">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Security Approach -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="grid lg:grid-cols-2 gap-8">
          <!-- Proactive -->
          <div class="card-glass p-8">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 rounded-lg bg-green-500/20 flex items-center justify-center">
                <svg class="w-5 h-5 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold" style="font-family: var(--font-display);">Proactive Protection</h3>
            </div>
            <ul class="space-y-3">
              {proactiveMeasures.map(measure => (
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-white/70">{measure}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Reactive -->
          <div class="card-glass p-8">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 rounded-lg bg-[var(--color-spark-orange)]/20 flex items-center justify-center">
                <svg class="w-5 h-5 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold" style="font-family: var(--font-display);">Monitoring & Response</h3>
            </div>
            <ul class="space-y-3">
              {reactiveMeasures.map(measure => (
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-[var(--color-spark-orange)] mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-white/70">{measure}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Plans Comparison -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="text-center max-w-2xl mx-auto mb-12">
          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">Choose Your Plan</span>
          <h2 class="text-3xl md:text-4xl font-bold mb-4" style="font-family: var(--font-display);">
            WordPress Security <span class="text-gradient-spark">Plans</span>
          </h2>
          <p class="text-white/60">
            Two options to fit your needs — both include hosting, security, and updates.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <!-- Standard -->
          <div class="card-glass p-8">
            <div class="mb-6">
              <h3 class="text-2xl font-bold mb-2" style="font-family: var(--font-display);">Standard</h3>
              <div class="flex items-baseline gap-1">
                <span class="text-4xl font-bold">€40</span>
                <span class="text-white/50">/month + VAT</span>
              </div>
            </div>
            <ul class="space-y-3 mb-8">
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Cloudflare CDN & DDoS protection
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Daily malware scanning
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Free SSL certificate
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Brute force protection
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Daily backups (7-day retention)
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Weekly security updates
              </li>
            </ul>
            <a href="/pricing" class="btn-outline w-full justify-center">
              Get Started
            </a>
          </div>

          <!-- Managed -->
          <div class="card-glass p-8 border-[var(--color-spark-red)]/30 relative">
            <div class="absolute -top-3 left-1/2 -translate-x-1/2">
              <span class="px-4 py-1 bg-gradient-to-r from-[var(--color-spark-red)] to-[var(--color-spark-orange)] rounded-full text-sm font-semibold">Recommended</span>
            </div>
            <div class="mb-6">
              <h3 class="text-2xl font-bold mb-2" style="font-family: var(--font-display);">Managed</h3>
              <div class="flex items-baseline gap-1">
                <span class="text-4xl font-bold text-gradient-spark">€249</span>
                <span class="text-white/50">/month + VAT</span>
              </div>
            </div>
            <ul class="space-y-3 mb-8">
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-[var(--color-spark-orange)] mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Everything in Standard, plus:
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-[var(--color-spark-orange)] mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <strong class="text-white">Patchstack real-time WAF</strong>
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-[var(--color-spark-orange)] mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Virtual patching for vulnerabilities
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-[var(--color-spark-orange)] mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <strong class="text-white">Hack recovery included</strong>
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-[var(--color-spark-orange)] mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                30-day backup retention
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-[var(--color-spark-orange)] mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Quarterly security reports
              </li>
            </ul>
            <a href="/pricing" class="btn-spark w-full justify-center">
              <span>Get Started</span>
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
