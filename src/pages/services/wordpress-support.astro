---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import BlogCardGrid from '../../components/BlogCardGrid.astro';

const supportFeatures = [
  {
    title: 'WhatsApp & Email Support',
    description: 'Reach us instantly via WhatsApp for urgent issues, or email for detailed requests. Real humans, not chatbots.',
    icon: 'chat'
  },
  {
    title: 'WordPress Specialists',
    description: 'Our support team are WordPress experts — not generalists reading from scripts.',
    icon: 'expert'
  },
  {
    title: 'Quick Response Times',
    description: 'Standard clients: same-day response. Managed clients: 1-2 hour priority response.',
    icon: 'clock'
  },
  {
    title: 'Problem Resolution',
    description: 'We don\'t just answer questions — we fix problems. From plugin conflicts to white screens.',
    icon: 'fix'
  },
  {
    title: 'Proactive Monitoring',
    description: 'We often spot and fix issues before you notice them. Uptime monitoring and alerts included.',
    icon: 'monitor'
  },
  {
    title: 'Irish Business Hours',
    description: 'Support available during Irish business hours. Emergency support for critical issues outside hours.',
    icon: 'ireland'
  },
];

const supportComparison = [
  {
    issue: 'Site down / white screen',
    standard: 'Same-day response',
    managed: 'Immediate priority'
  },
  {
    issue: 'Plugin conflict',
    standard: 'Guidance provided',
    managed: 'We fix it for you'
  },
  {
    issue: 'Theme customisation',
    standard: 'Recommendations only',
    managed: 'Minor changes included'
  },
  {
    issue: 'Security issue',
    standard: 'Alert + guidance',
    managed: 'Immediate cleanup'
  },
  {
    issue: 'Performance problems',
    standard: 'Basic diagnosis',
    managed: 'Full optimisation'
  },
  {
    issue: 'Content assistance',
    standard: 'Not included',
    managed: 'Basic updates included'
  },
];

const faqs = [
  {
    question: "How do I contact support?",
    answer: "You can reach us via WhatsApp for quick questions and urgent issues, or email for detailed requests. Managed clients also have access to a dedicated support portal. We respond during Irish business hours (9am-6pm, Monday-Friday), with emergency support available outside hours for critical issues."
  },
  {
    question: "What's your typical response time?",
    answer: "For Standard clients, we aim to respond within the same business day. For Managed clients, we provide priority support with a 1-2 hour response target during business hours. Critical issues (site down, security breach) are always treated as urgent regardless of plan."
  },
  {
    question: "What kind of issues do you help with?",
    answer: "We help with anything WordPress-related: site errors, plugin conflicts, performance issues, security concerns, update problems, email configuration, and general WordPress questions. We're WordPress specialists, so if it's WordPress, we can help."
  },
  {
    question: "Do you help with content updates?",
    answer: "Managed clients receive basic content assistance — updating text, swapping images, minor changes. Larger content projects or redesigns are quoted separately. Standard clients receive guidance on how to make changes themselves."
  },
  {
    question: "What if my site gets hacked?",
    answer: "For Managed clients, malware cleanup is included — we'll restore your site and secure it against future attacks. For Standard clients, we provide guidance and can quote for cleanup if needed. Either way, we're here to help you recover."
  },
  {
    question: "Is support included in hosting plans?",
    answer: "Yes, WordPress support is included with all hosting plans. The level of support differs: Standard plans include technical support and guidance, while Managed plans include hands-on help where we fix issues for you."
  },
];

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "WordPress Support",
  "name": "WordPress Support Ireland",
  "description": "Expert WordPress support for Irish businesses. Quick response times, real WordPress specialists, and hands-on problem resolution via WhatsApp and email.",
  "provider": {
    "@type": "Organization",
    "name": "SparkHost.ie",
    "url": "https://sparkhost.ie"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Ireland"
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://sparkhost.ie"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Services",
      "item": "https://sparkhost.ie/services"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "WordPress Support",
      "item": "https://sparkhost.ie/services/wordpress-support"
    }
  ]
};
---

<Layout
  title="WordPress Support Ireland | Expert WordPress Help | SparkHost.ie"
  description="Expert WordPress support for Irish businesses. Quick response via WhatsApp & email, WordPress specialists, and hands-on problem resolution. Included with hosting."
>
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

  <Header currentPath="/services" />

  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-20">
      <div class="container">
        <div class="max-w-3xl">
          <!-- Breadcrumb -->
          <nav class="flex items-center gap-2 text-sm text-white/50 mb-6">
            <a href="/" class="hover:text-white transition-colors">Home</a>
            <span>/</span>
            <a href="/services" class="hover:text-white transition-colors">Services</a>
            <span>/</span>
            <span class="text-white/70">WordPress Support</span>
          </nav>

          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">WordPress Support Ireland</span>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6" style="font-family: var(--font-display);">
            WordPress <span class="text-gradient-spark">Support</span>
          </h1>
          <p class="text-xl text-white/60 leading-relaxed mb-8">
            Real WordPress experts. Real solutions. Get <strong class="text-white/80">fast, knowledgeable support</strong> from people who actually understand WordPress — not offshore call centres reading scripts.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/pricing" class="btn-spark">
              <span>View Support Plans</span>
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a href="/contact" class="btn-outline">
              Get in Touch
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Our Support is Different -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold mb-6" style="font-family: var(--font-display);">
              Support That Actually <span class="text-gradient-spark">Helps</span>
            </h2>
            <div class="space-y-4 text-white/70">
              <p>
                <strong class="text-white">Most hosting support is useless for WordPress.</strong> You describe a plugin conflict and they tell you to "clear your cache." You report a security issue and get a canned response about updating your password.
              </p>
              <p>
                Our support team are WordPress developers and administrators who work with WordPress every day. When you describe a problem, we understand it — and we know how to fix it.
              </p>
              <p>
                Whether you're on our <a href="/pricing" class="text-[var(--color-spark-orange)] hover:underline">Standard or Managed plan</a>, you get access to real WordPress expertise. The difference is whether we guide you or handle it ourselves.
              </p>
            </div>
          </div>
          <div class="space-y-4">
            <div class="card-glass p-5 flex items-center gap-4">
              <div class="w-12 h-12 rounded-xl bg-green-500/20 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold">We Understand WordPress</h3>
                <p class="text-sm text-white/50">Not generic hosting — WordPress specifically</p>
              </div>
            </div>
            <div class="card-glass p-5 flex items-center gap-4">
              <div class="w-12 h-12 rounded-xl bg-green-500/20 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold">We Fix Problems</h3>
                <p class="text-sm text-white/50">Not just generic troubleshooting steps</p>
              </div>
            </div>
            <div class="card-glass p-5 flex items-center gap-4">
              <div class="w-12 h-12 rounded-xl bg-green-500/20 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold">We're in Ireland</h3>
                <p class="text-sm text-white/50">Same timezone, same business culture</p>
              </div>
            </div>
            <div class="card-glass p-5 flex items-center gap-4">
              <div class="w-12 h-12 rounded-xl bg-green-500/20 flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold">We're Proactive</h3>
                <p class="text-sm text-white/50">We often fix issues before you notice</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Support Features -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="text-center max-w-2xl mx-auto mb-12">
          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">What You Get</span>
          <h2 class="text-3xl md:text-4xl font-bold mb-4" style="font-family: var(--font-display);">
            WordPress <span class="text-gradient-spark">Support Features</span>
          </h2>
          <p class="text-white/60">
            Everything you need to keep your WordPress site running smoothly.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {supportFeatures.map((feature) => (
            <div class="card-glass p-6">
              <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-[var(--color-spark-red)]/20 to-[var(--color-spark-orange)]/20 flex items-center justify-center mb-4">
                {feature.icon === 'chat' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                  </svg>
                )}
                {feature.icon === 'expert' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                  </svg>
                )}
                {feature.icon === 'clock' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                )}
                {feature.icon === 'fix' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                )}
                {feature.icon === 'monitor' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                )}
                {feature.icon === 'ireland' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                )}
              </div>
              <h3 class="text-lg font-semibold mb-2" style="font-family: var(--font-display);">{feature.title}</h3>
              <p class="text-white/60 text-sm">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Support Comparison -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="text-center max-w-2xl mx-auto mb-12">
          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">Plan Comparison</span>
          <h2 class="text-3xl md:text-4xl font-bold mb-4" style="font-family: var(--font-display);">
            Standard vs <span class="text-gradient-spark">Managed</span> Support
          </h2>
          <p class="text-white/60">
            How we handle common issues on each plan.
          </p>
        </div>

        <div class="max-w-4xl mx-auto">
          <div class="card-glass overflow-hidden">
            <div class="overflow-x-auto">
              <table class="w-full">
                <thead>
                  <tr class="border-b border-white/10">
                    <th class="text-left p-4 font-semibold">Issue</th>
                    <th class="p-4 font-semibold text-center">Standard (€40/mo)</th>
                    <th class="p-4 font-semibold text-center text-[var(--color-spark-orange)]">Managed (€249/mo)</th>
                  </tr>
                </thead>
                <tbody>
                  {supportComparison.map((row, i) => (
                    <tr class={i !== supportComparison.length - 1 ? 'border-b border-white/5' : ''}>
                      <td class="p-4 text-white/70 font-medium">{row.issue}</td>
                      <td class="p-4 text-center text-white/50 text-sm">{row.standard}</td>
                      <td class="p-4 text-center text-[var(--color-spark-orange)] text-sm font-medium">{row.managed}</td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </div>

          <div class="flex justify-center mt-8 gap-4">
            <a href="/pricing" class="btn-spark">
              <span>Compare Full Plans</span>
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- How to Reach Us -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="text-center max-w-2xl mx-auto mb-12">
          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">Get in Touch</span>
          <h2 class="text-3xl md:text-4xl font-bold mb-4" style="font-family: var(--font-display);">
            How to <span class="text-gradient-spark">Contact Us</span>
          </h2>
        </div>

        <div class="grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
          <div class="card-glass p-6 text-center">
            <div class="w-14 h-14 rounded-2xl bg-green-500/20 flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-green-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
            </div>
            <h3 class="font-semibold mb-2" style="font-family: var(--font-display);">WhatsApp</h3>
            <p class="text-white/60 text-sm mb-4">Quick questions and urgent issues. Fastest way to reach us.</p>
            <span class="text-green-400 text-sm font-medium">Best for urgent issues</span>
          </div>

          <div class="card-glass p-6 text-center">
            <div class="w-14 h-14 rounded-2xl bg-blue-500/20 flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="font-semibold mb-2" style="font-family: var(--font-display);">Email</h3>
            <p class="text-white/60 text-sm mb-4">Detailed requests, questions, and issues that need explanation.</p>
            <span class="text-blue-400 text-sm font-medium">Best for detailed issues</span>
          </div>

          <div class="card-glass p-6 text-center">
            <div class="w-14 h-14 rounded-2xl bg-purple-500/20 flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <h3 class="font-semibold mb-2" style="font-family: var(--font-display);">Schedule a Call</h3>
            <p class="text-white/60 text-sm mb-4">Book a call for complex discussions or project consultations.</p>
            <span class="text-purple-400 text-sm font-medium">Best for consultations</span>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="max-w-3xl mx-auto">
          <div class="text-center mb-12">
            <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">Common Questions</span>
            <h2 class="text-3xl md:text-4xl font-bold" style="font-family: var(--font-display);">
              Support <span class="text-gradient-spark">FAQ</span>
            </h2>
          </div>

          <div class="space-y-4">
            {faqs.map((faq) => (
              <div class="card-glass overflow-hidden" data-faq-item>
                <button
                  class="w-full flex items-center justify-between p-5 text-left"
                  data-faq-trigger
                  aria-expanded="false"
                >
