---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import BlogCardGrid from '../../components/BlogCardGrid.astro';

const weeklyTasks = [
  'WordPress core updates',
  'Plugin updates with compatibility testing',
  'Theme updates and verification',
  'Security patch application',
  'Database optimisation',
  'Backup verification',
];

const monthlyTasks = [
  'Full security audit',
  'Performance analysis report',
  'Broken link checking',
  'SEO health check',
  'Uptime reporting',
  'Storage cleanup',
];

const includedFeatures = [
  {
    title: 'Automated Updates',
    description: 'WordPress core, plugins, and themes kept up-to-date with staging tests before deployment.',
    icon: 'refresh'
  },
  {
    title: 'Daily Backups',
    description: 'Automated daily backups with 7-30 day retention and one-click restore capability.',
    icon: 'database'
  },
  {
    title: 'Security Monitoring',
    description: 'Malware scanning, firewall protection, and real-time threat detection with Patchstack.',
    icon: 'shield'
  },
  {
    title: 'Performance Optimisation',
    description: 'Image compression, caching configuration, and Core Web Vitals monitoring.',
    icon: 'lightning'
  },
  {
    title: 'Uptime Monitoring',
    description: '24/7 uptime monitoring with instant alerts if your site goes down.',
    icon: 'chart'
  },
  {
    title: 'Expert Support',
    description: 'Irish-based WordPress specialists available via WhatsApp, email, and phone.',
    icon: 'support'
  },
];

const faqs = [
  {
    question: "What's included in WordPress maintenance?",
    answer: "Our WordPress maintenance includes weekly core, plugin, and theme updates, daily automated backups, security monitoring and malware scanning, performance optimisation, uptime monitoring, and expert support. The Managed plan also includes 3 hours/month of content changes."
  },
  {
    question: "How often do you update WordPress sites?",
    answer: "We perform WordPress updates weekly, testing all changes on a staging environment first (Managed plan). Security patches are applied within 24-48 hours of release. All updates are logged and can be rolled back if needed."
  },
  {
    question: "Do I need WordPress maintenance if my site is small?",
    answer: "Yes. Hackers target small sites precisely because they often lack security. Outdated plugins are the #1 cause of WordPress hacks. Regular maintenance protects your business reputation and customer data, regardless of site size."
  },
  {
    question: "Can I do WordPress maintenance myself?",
    answer: "You can, but it requires consistent time and WordPress expertise. Most business owners find their time is better spent on their business. Professional maintenance ensures nothing gets missed and issues are caught early."
  },
  {
    question: "What happens if an update breaks my site?",
    answer: "We test updates on staging before applying to production (Managed plan). If an issue occurs, we restore from backup immediately. Our monitoring catches problems within minutes, not days."
  },
  {
    question: "How do backups work?",
    answer: "Daily automated backups are stored off-site with 7-30 day retention depending on your plan. Backups include all files and the database. One-click restore available 24/7 through our dashboard or support team."
  },
];

// Schema markup
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "WordPress Maintenance",
  "name": "WordPress Maintenance Services Ireland",
  "description": "Professional WordPress maintenance services for Irish businesses. Includes updates, backups, security monitoring, performance optimisation, and expert support.",
  "provider": {
    "@type": "Organization",
    "name": "SparkHost.ie",
    "url": "https://sparkhost.ie"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Ireland"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "WordPress Maintenance Plans",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Standard WordPress Maintenance",
          "description": "WordPress hosting with automatic updates, security, backups, and support"
        },
        "price": "40",
        "priceCurrency": "EUR"
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Managed WordPress Maintenance",
          "description": "Premium maintenance with staging, content changes, priority support, and advanced security"
        },
        "price": "249",
        "priceCurrency": "EUR"
      }
    ]
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://sparkhost.ie"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Services",
      "item": "https://sparkhost.ie/services"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "WordPress Maintenance",
      "item": "https://sparkhost.ie/services/wordpress-maintenance"
    }
  ]
};
---

<Layout
  title="WordPress Maintenance Services Ireland | Updates, Backups & Security | SparkHost.ie"
  description="Professional WordPress maintenance for Irish businesses. Weekly updates, daily backups, security monitoring, and expert support. Standard €40/mo or Managed €249/mo."
>
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

  <Header currentPath="/services" />

  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-20">
      <div class="container">
        <div class="max-w-3xl">
          <!-- Breadcrumb -->
          <nav class="flex items-center gap-2 text-sm text-white/50 mb-6">
            <a href="/" class="hover:text-white transition-colors">Home</a>
            <span>/</span>
            <a href="/services" class="hover:text-white transition-colors">Services</a>
            <span>/</span>
            <span class="text-white/70">WordPress Maintenance</span>
          </nav>

          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">WordPress Maintenance Ireland</span>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6" style="font-family: var(--font-display);">
            WordPress Maintenance <span class="text-gradient-spark">Services</span>
          </h1>
          <p class="text-xl text-white/60 leading-relaxed mb-8">
            Keep your WordPress website secure, fast, and up-to-date. Our <strong class="text-white/80">WordPress maintenance services</strong> handle updates, backups, security, and performance — so you can focus on your business.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/pricing" class="btn-spark">
              <span>View Maintenance Plans</span>
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a href="/contact" class="btn-outline">
              Book a Free Call
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Maintenance Matters -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold mb-6" style="font-family: var(--font-display);">
              Why WordPress Maintenance <span class="text-gradient-spark">Matters</span>
            </h2>
            <div class="space-y-4 text-white/70">
              <p>
                WordPress powers over 40% of all websites, making it a prime target for hackers. <strong class="text-white">Outdated plugins are the #1 cause of WordPress security breaches</strong> — and the average cost of a website hack for small businesses is €3,000-€10,000.
              </p>
              <p>
                Beyond security, regular <a href="/blog/wordpress-updates-why-matter" class="text-[var(--color-spark-orange)] hover:underline">WordPress updates</a> ensure your site stays compatible with new PHP versions, browser standards, and web technologies. Performance degrades without regular <a href="/blog/database-optimisation-wordpress" class="text-[var(--color-spark-orange)] hover:underline">database optimisation</a>.
              </p>
              <p>
                Professional maintenance isn't an expense — it's insurance for your online business.
              </p>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div class="card-glass p-6 text-center">
              <div class="text-4xl font-bold text-gradient-spark mb-2" style="font-family: var(--font-display);">97%</div>
              <p class="text-sm text-white/60">of WordPress hacks target outdated software</p>
            </div>
            <div class="card-glass p-6 text-center">
              <div class="text-4xl font-bold text-gradient-spark mb-2" style="font-family: var(--font-display);">€5K</div>
              <p class="text-sm text-white/60">average cost of a website security breach</p>
            </div>
            <div class="card-glass p-6 text-center">
              <div class="text-4xl font-bold text-gradient-spark mb-2" style="font-family: var(--font-display);">52%</div>
              <p class="text-sm text-white/60">of SMEs had security incidents last year</p>
            </div>
            <div class="card-glass p-6 text-center">
              <div class="text-4xl font-bold text-gradient-spark mb-2" style="font-family: var(--font-display);">40%</div>
              <p class="text-sm text-white/60">of hacked sites had no backup</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- What's Included -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="text-center max-w-2xl mx-auto mb-12">
          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">Comprehensive Care</span>
          <h2 class="text-3xl md:text-4xl font-bold mb-4" style="font-family: var(--font-display);">
            What's Included in Our <span class="text-gradient-spark">WordPress Maintenance</span>
          </h2>
          <p class="text-white/60">
            Everything your WordPress site needs to stay secure, fast, and reliable — without lifting a finger.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {includedFeatures.map((feature) => (
            <div class="card-glass p-6">
              <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-[var(--color-spark-red)]/20 to-[var(--color-spark-orange)]/20 flex items-center justify-center mb-4">
                {feature.icon === 'refresh' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                  </svg>
                )}
                {feature.icon === 'database' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
                  </svg>
                )}
                {feature.icon === 'shield' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                )}
                {feature.icon === 'lightning' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                )}
                {feature.icon === 'chart' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                )}
                {feature.icon === 'support' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                  </svg>
                )}
              </div>
              <h3 class="text-lg font-semibold mb-2" style="font-family: var(--font-display);">{feature.title}</h3>
              <p class="text-white/60 text-sm">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Maintenance Schedule -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="grid lg:grid-cols-2 gap-8">
          <!-- Weekly Tasks -->
          <div class="card-glass p-8">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 rounded-lg bg-green-500/20 flex items-center justify-center">
                <svg class="w-5 h-5 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold" style="font-family: var(--font-display);">Weekly Tasks</h3>
            </div>
            <ul class="space-y-3">
              {weeklyTasks.map(task => (
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-white/70">{task}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Monthly Tasks -->
          <div class="card-glass p-8">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 rounded-lg bg-[var(--color-spark-orange)]/20 flex items-center justify-center">
                <svg class="w-5 h-5 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold" style="font-family: var(--font-display);">Monthly Tasks</h3>
            </div>
            <ul class="space-y-3">
              {monthlyTasks.map(task => (
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-[var(--color-spark-orange)] mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-white/70">{task}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Plans Comparison -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="text-center max-w-2xl mx-auto mb-12">
          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">Choose Your Plan</span>
          <h2 class="text-3xl md:text-4xl font-bold mb-4" style="font-family: var(--font-display);">
            WordPress Maintenance <span class="text-gradient-spark">Plans</span>
          </h2>
          <p class="text-white/60">
            Two options to fit your needs — both include hosting, security, and updates.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <!-- Standard -->
          <div class="card-glass p-8">
            <div class="mb-6">
              <h3 class="text-2xl font-bold mb-2" style="font-family: var(--font-display);">Standard</h3>
              <div class="flex items-baseline gap-1">
                <span class="text-4xl font-bold">€40</span>
                <span class="text-white/50">/month + VAT</span>
              </div>
            </div>
            <ul class="space-y-3 mb-8">
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Weekly WordPress updates
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Daily backups (7-day retention)
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Malware scanning & Cloudflare WAF
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                30GB SSD hosting
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Email & WhatsApp support
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                1 hour/month content edits
              </li>
            </ul>
            <a href="/pricing" class="btn-outline w-full justify-center">
              Get Started
            </a>
          </div>

          <!-- Managed -->
          <div class="card-glass p-8 border-[var(--color-spark-red)]/30 relative">
            <div class="absolute -top-3 left-1/2 -translate-x-1/2">
              <span class="px-4 py-1 bg-gradient-to-r from-[var(--color-spark-red)] to-[var(--color-spark-orange)] rounded-full text-sm font-semibold">Recommended</span>
            </div>
            <div class="mb-6">
              <h3 class="text-2xl font-bold mb-2" style="font-family: var(--font-display);">Managed</h3>
              <div class="flex items-baseline gap-1">
                <span class="text-4xl font-bold text-gradient-spark">€249</span>
                <span class="text-white/50">/month + VAT</span>
              </div>
            </div>
            <ul class="space-y-3 mb-8">
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-[var(--color-spark-orange)] mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Everything in Standard, plus:
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-[var(--color-spark-orange)] mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Staging environment for safe testing
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-[var(--color-spark-orange)] mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Patchstack real-time security
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-[var(--color-spark-orange)] mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                100GB SSD + CDN
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-[var(--color-spark-orange)] mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Priority phone support
              </li>
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-[var(--color-spark-orange)] mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <strong class="text-white">3 hours/month content changes</strong>
              </li>
            </ul>
            <a href="/pricing" class="btn-spark w-full justify-center">
              <span>Get Started</span>
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Related Blog Posts -->
    <section class="py-16 border-t border-white/10">
