---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import BlogCardGrid from '../../components/BlogCardGrid.astro';

const gdprFeatures = [
  {
    title: 'EU Data Storage',
    description: 'Your website data is stored in European data centres, meeting GDPR data residency requirements.',
    icon: 'eu'
  },
  {
    title: 'Cookie Consent',
    description: 'We help implement compliant cookie consent banners that meet Irish DPC requirements.',
    icon: 'cookie'
  },
  {
    title: 'Privacy Policy Setup',
    description: 'Guidance on privacy policy requirements for Irish WordPress sites.',
    icon: 'document'
  },
  {
    title: 'Data Processing',
    description: 'Our hosting includes a Data Processing Agreement (DPA) as required under GDPR.',
    icon: 'contract'
  },
  {
    title: 'Secure Infrastructure',
    description: 'SSL encryption, firewall protection, and security measures to protect personal data.',
    icon: 'shield'
  },
  {
    title: 'Data Subject Requests',
    description: 'Guidance on handling data access, deletion, and portability requests.',
    icon: 'user'
  },
];

const gdprChecklist = [
  {
    category: 'Cookie Compliance',
    items: [
      'Cookie consent banner implemented',
      'Essential vs non-essential cookies classified',
      'Consent recorded before non-essential cookies load',
      'Easy opt-out mechanism available',
      'Cookie policy accessible'
    ]
  },
  {
    category: 'Privacy Documentation',
    items: [
      'Privacy policy published and accessible',
      'Data processing purposes clearly stated',
      'Third-party data sharing disclosed',
      'User rights explained',
      'Contact details for DPO/privacy queries'
    ]
  },
  {
    category: 'Data Security',
    items: [
      'SSL certificate active (HTTPS)',
      'WordPress and plugins up to date',
      'Strong password policies enforced',
      'Regular backups in place',
      'Access controls configured'
    ]
  },
  {
    category: 'Forms & Data Collection',
    items: [
      'Consent checkboxes on forms (not pre-ticked)',
      'Purpose of data collection stated',
      'Data retention periods defined',
      'Unnecessary data fields removed',
      'Secure form submission (SSL)'
    ]
  },
];

const faqs = [
  {
    question: "Does GDPR apply to my Irish website?",
    answer: "If you collect any personal data from visitors (names, emails, IP addresses, cookies), GDPR applies to you. This includes contact forms, newsletter signups, analytics, and e-commerce orders. As an Irish business, you're also subject to the Irish Data Protection Commission's guidance."
  },
  {
    question: "Where is my data stored with SparkHost?",
    answer: "All SparkHost servers are located in EU data centres (primarily Ireland and Germany). This means your website data never leaves the EU, which simplifies GDPR compliance for data residency requirements."
  },
  {
    question: "Do you provide a Data Processing Agreement?",
    answer: "Yes. Under GDPR, a Data Processing Agreement (DPA) is required between you (the data controller) and us (the data processor). We provide a GDPR-compliant DPA as part of our hosting service."
  },
  {
    question: "What cookie consent solution do you recommend?",
    answer: "We typically recommend GDPR-compliant solutions like CookieYes or Complianz for WordPress. These block non-essential cookies until consent is given and provide the granular controls required by the Irish DPC. We can help configure these during setup."
  },
  {
    question: "Can you help with GDPR compliance for my WordPress site?",
    answer: "We provide hosting that supports GDPR compliance (EU data storage, DPA, security measures) and guidance on WordPress-specific compliance. We can configure cookie consent plugins, recommend privacy policy approaches, and ensure technical measures are in place. For legal compliance advice, we recommend consulting with a GDPR specialist."
  },
  {
    question: "What happens if there's a data breach?",
    answer: "We have security monitoring in place and will notify you promptly if we detect a breach affecting your data. GDPR requires notification to the DPC within 72 hours of becoming aware of a breach. We'll provide the technical details needed for any required notifications."
  },
];

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "GDPR Compliant WordPress Hosting",
  "name": "GDPR Compliance for WordPress Ireland",
  "description": "GDPR-compliant WordPress hosting for Irish businesses. EU data storage, cookie consent setup, Data Processing Agreement, and security measures to help meet GDPR requirements.",
  "provider": {
    "@type": "Organization",
    "name": "SparkHost.ie",
    "url": "https://sparkhost.ie"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Ireland"
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://sparkhost.ie"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Services",
      "item": "https://sparkhost.ie/services"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "GDPR Compliance",
      "item": "https://sparkhost.ie/services/gdpr-compliance"
    }
  ]
};
