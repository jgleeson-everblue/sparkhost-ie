---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import BlogCardGrid from '../../components/BlogCardGrid.astro';

const backupFeatures = [
  {
    title: 'Daily Automated Backups',
    description: 'Your entire site backed up every day — files, database, uploads, and configuration.',
    icon: 'clock'
  },
  {
    title: 'Off-Site Storage',
    description: 'Backups stored securely in multiple European data centres, separate from your hosting.',
    icon: 'cloud'
  },
  {
    title: 'One-Click Restore',
    description: 'Restore your entire site or specific files in minutes, not hours.',
    icon: 'refresh'
  },
  {
    title: '7-30 Day Retention',
    description: 'Multiple restore points available. Go back a day, a week, or a month.',
    icon: 'calendar'
  },
  {
    title: 'Pre-Update Snapshots',
    description: 'Automatic backups before every WordPress, plugin, or theme update.',
    icon: 'shield'
  },
  {
    title: 'Database Backups',
    description: 'Your WordPress database backed up separately for quick, targeted restores.',
    icon: 'database'
  },
];

const backupComparison = [
  {
    scenario: 'Plugin update breaks site',
    withBackup: 'Restore previous version in 5 minutes',
    withoutBackup: 'Hours or days of troubleshooting, possible data loss'
  },
  {
    scenario: 'Hacked website',
    withBackup: 'Restore clean version, identify entry point, secure',
    withoutBackup: 'Rebuild from scratch, lose customer data, extended downtime'
  },
  {
    scenario: 'Accidental content deletion',
    withBackup: 'Restore specific files or database entries',
    withoutBackup: 'Content permanently lost, manual recreation needed'
  },
  {
    scenario: 'Server failure',
    withBackup: 'Migrate to new server with full site intact',
    withoutBackup: 'Complete rebuild if no recent manual backup exists'
  },
];

const faqs = [
  {
    question: "How often are WordPress backups created?",
    answer: "We create daily automated backups of your entire WordPress site including files, database, and uploads. For sites with frequent content changes, we can configure more frequent backups. Pre-update snapshots are created before any WordPress, plugin, or theme update."
  },
  {
    question: "Where are my backups stored?",
    answer: "Backups are stored in secure European data centres, completely separate from your hosting server. This means if something happens to your hosting server, your backups remain safe and accessible for restoration."
  },
  {
    question: "How long are backups retained?",
    answer: "Standard plan includes 7-day backup retention. Managed plan includes 30-day retention plus monthly full snapshots. We can arrange longer retention periods for businesses with compliance requirements."
  },
  {
    question: "Can I restore my own backups?",
    answer: "Yes, you can request a restore anytime via WhatsApp or email. For Managed clients, we provide dashboard access for self-service restores. Most restores are completed within 30 minutes of request."
  },
  {
    question: "What's included in a backup?",
    answer: "Complete site backups include: all WordPress core files, your theme and child theme, all plugins, wp-content/uploads (media library), your WordPress database, and wp-config.php configuration. Everything needed to fully restore your site."
  },
  {
    question: "Do backups slow down my website?",
    answer: "No. Backups run during off-peak hours and use incremental technology — only changed files are backed up after the initial full backup. Your site visitors won't notice any impact."
  },
];

// Schema markup
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "WordPress Backup Service",
  "name": "WordPress Backup & Recovery Services Ireland",
  "description": "Professional WordPress backup services for Irish businesses. Daily automated backups, off-site storage, one-click restore, and 7-30 day retention. Never lose your website data.",
  "provider": {
    "@type": "Organization",
    "name": "SparkHost.ie",
    "url": "https://sparkhost.ie"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Ireland"
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://sparkhost.ie"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Services",
      "item": "https://sparkhost.ie/services"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "WordPress Backup",
      "item": "https://sparkhost.ie/services/wordpress-backup"
    }
  ]
};
---

<Layout
  title="WordPress Backup Services Ireland | Daily Backups & Recovery | SparkHost.ie"
  description="Professional WordPress backup services for Irish businesses. Daily automated backups, off-site storage, one-click restore, and disaster recovery. Included with all hosting plans."
>
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

  <Header currentPath="/services" />

  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-20">
      <div class="container">
        <div class="max-w-3xl">
          <!-- Breadcrumb -->
          <nav class="flex items-center gap-2 text-sm text-white/50 mb-6">
            <a href="/" class="hover:text-white transition-colors">Home</a>
            <span>/</span>
            <a href="/services" class="hover:text-white transition-colors">Services</a>
            <span>/</span>
            <span class="text-white/70">WordPress Backup</span>
          </nav>

          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">WordPress Backup Ireland</span>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6" style="font-family: var(--font-display);">
            WordPress Backup & <span class="text-gradient-spark">Recovery</span>
          </h1>
          <p class="text-xl text-white/60 leading-relaxed mb-8">
            Your website is your business. Our <strong class="text-white/80">WordPress backup services</strong> ensure you never lose a single page, post, or customer order — no matter what happens.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/pricing" class="btn-spark">
              <span>View Plans with Backups</span>
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a href="/contact" class="btn-outline">
              Book a Free Call
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Backups Matter -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold mb-6" style="font-family: var(--font-display);">
              Why WordPress Backups <span class="text-gradient-spark">Matter</span>
            </h2>
            <div class="space-y-4 text-white/70">
              <p>
                <strong class="text-white">40% of businesses that lose their website data never fully recover.</strong> Whether it's a hacked site, a bad plugin update, or accidental deletion — without backups, you're rebuilding from scratch.
              </p>
              <p>
                Most budget hosting providers offer "backups" but the reality is often disappointing: weekly snapshots (not daily), stored on the same server (useless if the server fails), and restoration that takes days, not minutes.
              </p>
              <p>
                Our <a href="/services/wordpress-maintenance" class="text-[var(--color-spark-orange)] hover:underline">WordPress maintenance</a> includes enterprise-grade backup infrastructure. Your data is safe, accessible, and restorable at a moment's notice.
              </p>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div class="card-glass p-6 text-center">
              <div class="text-4xl font-bold text-gradient-spark mb-2" style="font-family: var(--font-display);">40%</div>
              <p class="text-sm text-white/60">of businesses don't recover from data loss</p>
            </div>
            <div class="card-glass p-6 text-center">
              <div class="text-4xl font-bold text-gradient-spark mb-2" style="font-family: var(--font-display);">60%</div>
              <p class="text-sm text-white/60">of SMEs close within 6 months of a cyber attack</p>
            </div>
            <div class="card-glass p-6 text-center">
              <div class="text-4xl font-bold text-gradient-spark mb-2" style="font-family: var(--font-display);">€3K+</div>
              <p class="text-sm text-white/60">average cost to rebuild a website from scratch</p>
            </div>
            <div class="card-glass p-6 text-center">
              <div class="text-4xl font-bold text-gradient-spark mb-2" style="font-family: var(--font-display);">5 min</div>
              <p class="text-sm text-white/60">time to restore from SparkHost backup</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Backup Features -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="text-center max-w-2xl mx-auto mb-12">
          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">Enterprise-Grade Protection</span>
          <h2 class="text-3xl md:text-4xl font-bold mb-4" style="font-family: var(--font-display);">
            How Our <span class="text-gradient-spark">WordPress Backups</span> Work
          </h2>
          <p class="text-white/60">
            Set-and-forget backup infrastructure that protects your business around the clock.
          </p>
        </div>

