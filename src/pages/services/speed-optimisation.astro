---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import BlogCardGrid from '../../components/BlogCardGrid.astro';

const optimisationAreas = [
  {
    title: 'Fast Infrastructure',
    description: 'Premium hosting with sub-200ms response times. Fast infrastructure is the foundation of fast sites.',
    icon: 'server',
    features: ['High-Performance Servers', 'SSD Storage', 'Latest PHP', 'HTTP/3 Support']
  },
  {
    title: 'Advanced Caching',
    description: 'Multi-layer caching reduces page generation from seconds to milliseconds. Your site stays fast under any load.',
    icon: 'database',
    features: ['Page Caching', 'Object Cache (Redis)', 'Browser Caching', 'OPcache']
  },
  {
    title: 'Global CDN',
    description: 'Cloudflare edge servers deliver static assets from 300+ locations. Irish visitors get Irish speeds.',
    icon: 'globe',
    features: ['Cloudflare CDN', '300+ Edge Locations', 'Auto Minification', 'Brotli Compression']
  },
  {
    title: 'Image Optimisation',
    description: 'Automatic WebP conversion and compression reduce image sizes by 60-80% without visible quality loss.',
    icon: 'image',
    features: ['WebP Conversion', 'Lossy Compression', 'Lazy Loading', 'Responsive Images']
  },
  {
    title: 'Code Optimisation',
    description: 'Minified CSS/JS, deferred loading, and eliminated render-blocking resources for faster page rendering.',
    icon: 'code',
    features: ['CSS/JS Minification', 'Defer Loading', 'Critical CSS', 'Unused Code Removal']
  },
  {
    title: 'Database Optimisation',
    description: 'Clean, indexed databases respond faster. We remove bloat and optimise queries for peak performance.',
    icon: 'chart',
    features: ['Query Optimisation', 'Index Tuning', 'Bloat Removal', 'Revision Cleanup']
  }
];

const coreWebVitals = [
  {
    metric: 'LCP',
    name: 'Largest Contentful Paint',
    target: '< 2.5 seconds',
    description: 'How quickly main content loads',
    optimisation: 'Server response, image optimisation, caching'
  },
  {
    metric: 'INP',
    name: 'Interaction to Next Paint',
    target: '< 200ms',
    description: 'How quickly page responds to clicks',
    optimisation: 'JavaScript optimisation, deferred loading'
  },
  {
    metric: 'CLS',
    name: 'Cumulative Layout Shift',
    target: '< 0.1',
    description: 'Visual stability (no jumping content)',
    optimisation: 'Image dimensions, font loading, reserving space'
  }
];

const faqs = [
  {
    question: 'How much faster will my site be after optimisation?',
    answer: 'Results vary based on your starting point, but most sites see 2-5x improvements. A site loading in 6 seconds typically drops to 1-2 seconds. We provide before/after metrics so you can see the exact improvement.'
  },
  {
    question: 'Will speed optimisation break anything on my site?',
    answer: 'We test all optimisations on a staging environment before applying to production. Caching configurations are carefully set to exclude dynamic elements like shopping carts. We monitor for issues post-optimisation and quickly resolve any that arise.'
  },
  {
    question: 'Do I need to change my theme or plugins for better speed?',
    answer: "Not necessarily. Many speed improvements come from server configuration, caching, and image optimisation — independent of your theme. However, if your theme or certain plugins are fundamentally problematic (like some heavy page builders), we'll discuss alternatives."
  },
  {
    question: 'How do you measure speed improvements?',
    answer: "We use industry-standard tools: Google PageSpeed Insights, GTmetrix, and Chrome User Experience Report (CrUX) for real-world data. You'll receive clear before/after comparisons including Core Web Vitals scores, load times, and server response times."
  },
  {
    question: 'Is speed optimisation a one-time thing or ongoing?',
    answer: 'Initial optimisation creates the foundation, but speed requires ongoing attention. New content, plugin updates, and WordPress changes can impact performance. Our Managed plans include continuous monitoring and re-optimisation to maintain peak speed.'
  },
  {
    question: 'Will faster speed improve my Google rankings?',
    answer: 'Yes, Core Web Vitals are a confirmed Google ranking factor since 2021. While content quality matters more, passing Core Web Vitals can provide a ranking boost. More importantly, faster sites have lower bounce rates and higher conversions — which indirectly helps SEO.'
  }
];

// Schema markup
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "WordPress Speed Optimisation",
  "name": "WordPress Speed Optimisation Services Ireland",
  "description": "Professional WordPress speed optimisation for Irish businesses. Includes Core Web Vitals improvement, caching, CDN integration, image optimisation, and performance monitoring.",
  "provider": {
    "@type": "Organization",
    "name": "SparkHost.ie",
    "url": "https://sparkhost.ie"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Ireland"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "WordPress Hosting Plans",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Standard WordPress Hosting",
          "description": "WordPress hosting with automatic caching, CDN, and image optimisation"
        },
        "price": "40",
        "priceCurrency": "EUR"
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Managed WordPress Hosting",
          "description": "Premium hosting with advanced caching, staging environment, and performance monitoring"
        },
        "price": "249",
        "priceCurrency": "EUR"
      }
    ]
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://sparkhost.ie"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Services",
      "item": "https://sparkhost.ie/services"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "Speed Optimisation",
      "item": "https://sparkhost.ie/services/speed-optimisation"
    }
  ]
};
---

<Layout
  title="WordPress Speed Optimisation Ireland | Core Web Vitals & Performance | SparkHost.ie"
  description="Make your WordPress site blazing fast. Expert speed optimisation including Core Web Vitals, premium hosting, CDN, caching, and image optimisation. Standard €40/mo or Managed €249/mo."
>
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

  <Header currentPath="/services" />

  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-20">
      <div class="container">
        <div class="max-w-3xl">
          <!-- Breadcrumb -->
          <nav class="flex items-center gap-2 text-sm text-white/50 mb-6">
            <a href="/" class="hover:text-white transition-colors">Home</a>
            <span>/</span>
            <a href="/services" class="hover:text-white transition-colors">Services</a>
            <span>/</span>
            <span class="text-white/70">Speed Optimisation</span>
          </nav>

          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">WordPress Speed Optimisation Ireland</span>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6" style="font-family: var(--font-display);">
            WordPress Speed <span class="text-gradient-spark">That Converts</span>
          </h1>
          <p class="text-xl text-white/60 leading-relaxed mb-8">
            Every second counts. Slow websites lose customers, hurt rankings, and frustrate visitors. We make WordPress sites <strong class="text-white/80">properly fast</strong> — not just "slightly better" fast.
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/pricing" class="btn-spark">
              <span>Get Faster Hosting</span>
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </a>
            <a href="/contact" class="btn-outline">
              Request Speed Audit
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Speed Matters -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold mb-6" style="font-family: var(--font-display);">
              Why Speed <span class="text-gradient-spark">Matters</span>
            </h2>
            <div class="space-y-4 text-white/70">
              <p>
                <strong class="text-white">A one-second delay reduces conversions by 7%</strong>. For a site doing €100,000/month, that's €7,000 lost — every single month. Speed isn't optional anymore.
              </p>
              <p>
                Google's <a href="/blog/core-web-vitals-wordpress" class="text-[var(--color-spark-orange)] hover:underline">Core Web Vitals</a> are now a confirmed ranking factor. Slow sites get pushed down in search results, losing organic traffic to faster competitors.
              </p>
              <p>
                53% of mobile visitors abandon sites that take longer than 3 seconds to load. You're losing over half your potential customers before they see your content.
              </p>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-4">
            <div class="card-glass p-6 text-center">
              <div class="text-4xl font-bold text-gradient-spark mb-2" style="font-family: var(--font-display);">< 1s</div>
              <p class="text-sm text-white/60">Target load time (LCP)</p>
            </div>
            <div class="card-glass p-6 text-center">
              <div class="text-4xl font-bold text-gradient-spark mb-2" style="font-family: var(--font-display);">40%</div>
              <p class="text-sm text-white/60">Higher conversion on fast sites</p>
            </div>
            <div class="card-glass p-6 text-center">
              <div class="text-4xl font-bold text-gradient-spark mb-2" style="font-family: var(--font-display);">53%</div>
              <p class="text-sm text-white/60">Visitors leave if > 3 seconds</p>
            </div>
            <div class="card-glass p-6 text-center">
              <div class="text-4xl font-bold text-gradient-spark mb-2" style="font-family: var(--font-display);">100%</div>
              <p class="text-sm text-white/60">Google Core Web Vitals focus</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- What's Included -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="text-center max-w-2xl mx-auto mb-12">
          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">Our Speed Stack</span>
          <h2 class="text-3xl md:text-4xl font-bold mb-4" style="font-family: var(--font-display);">
            What's Included in Our <span class="text-gradient-spark">Speed Optimisation</span>
          </h2>
          <p class="text-white/60">
            Speed comes from optimising every layer — from server to browser. We address all of them.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {optimisationAreas.map((area) => (
            <div class="card-glass p-6">
              <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-[var(--color-spark-red)]/20 to-[var(--color-spark-orange)]/20 flex items-center justify-center mb-4">
                {area.icon === 'server' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5.25 14.25h13.5m-13.5 0a3 3 0 01-3-3m3 3a3 3 0 100 6h13.5a3 3 0 100-6m-16.5-3a3 3 0 013-3h13.5a3 3 0 013 3m-19.5 0a4.5 4.5 0 01.9-2.7L5.737 5.1a3.375 3.375 0 012.7-1.35h7.126c1.062 0 2.062.5 2.7 1.35l2.587 3.45a4.5 4.5 0 01.9 2.7m0 0a3 3 0 01-3 3m0 3h.008v.008h-.008v-.008zm0-6h.008v.008h-.008v-.008zm-3 6h.008v.008h-.008v-.008zm0-6h.008v.008h-.008v-.008z" />
                  </svg>
                )}
                {area.icon === 'database' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
                  </svg>
                )}
                {area.icon === 'globe' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
                  </svg>
                )}
                {area.icon === 'image' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
                  </svg>
                )}
                {area.icon === 'code' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5" />
                  </svg>
                )}
                {area.icon === 'chart' && (
                  <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.75 3v11.25A2.25 2.25 0 006 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0118 16.5h-2.25m-7.5 0h7.5m-7.5 0l-1 3m8.5-3l1 3m0 0l.5 1.5m-.5-1.5h-9.5m0 0l-.5 1.5M9 11.25v1.5M12 9v3.75m3-6v6" />
                  </svg>
                )}
              </div>
              <h3 class="text-lg font-semibold mb-2" style="font-family: var(--font-display);">{area.title}</h3>
              <p class="text-white/60 text-sm mb-4">{area.description}</p>
              <div class="flex flex-wrap gap-2">
                {area.features.map((feature) => (
                  <span class="px-2 py-1 bg-white/5 text-white/50 text-xs rounded">{feature}</span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Core Web Vitals Section -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="text-center max-w-2xl mx-auto mb-12">
          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">Google's Speed Standards</span>
          <h2 class="text-3xl md:text-4xl font-bold mb-4" style="font-family: var(--font-display);">
            Core Web Vitals <span class="text-gradient-spark">Optimisation</span>
          </h2>
          <p class="text-white/60">
            Google measures three specific metrics that determine if your site passes their speed requirements. We optimise for all three.
          </p>
        </div>

        <div class="max-w-4xl mx-auto space-y-4">
          {coreWebVitals.map((vital) => (
            <div class="card-glass p-6">
              <div class="flex flex-col md:flex-row md:items-center gap-6">
                <div class="md:w-24 flex-shrink-0">
                  <div class="inline-flex items-center justify-center px-4 py-2 bg-gradient-to-r from-[var(--color-spark-red)]/10 to-[var(--color-spark-orange)]/10 rounded-lg">
                    <span class="text-2xl font-bold text-gradient-spark">{vital.metric}</span>
                  </div>
                </div>
                <div class="flex-1">
                  <div class="flex flex-col sm:flex-row sm:items-center gap-2 mb-2">
                    <h3 class="font-semibold" style="font-family: var(--font-display);">{vital.name}</h3>
                    <span class="inline-flex items-center px-2 py-1 bg-green-500/10 text-green-400 text-xs font-medium rounded">
                      Target: {vital.target}
                    </span>
                  </div>
                  <p class="text-white/60 text-sm mb-2">{vital.description}</p>
                  <p class="text-white/50 text-sm"><span class="text-white/70">How we fix it:</span> {vital.optimisation}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Before/After Comparison -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="text-center max-w-2xl mx-auto mb-12">
          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">Real Results</span>
          <h2 class="text-3xl md:text-4xl font-bold mb-4" style="font-family: var(--font-display);">
            Typical Results After <span class="text-gradient-spark">Migration</span>
          </h2>
          <p class="text-white/60">
            Sites migrating to SparkHost typically see dramatic improvements without any code changes.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <!-- Before -->
          <div class="card-glass p-8 border-red-500/20">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 rounded-lg bg-red-500/20 flex items-center justify-center">
                <svg class="w-5 h-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold" style="font-family: var(--font-display);">Before SparkHost</h3>
            </div>
            <ul class="space-y-4">
              <li class="flex items-center justify-between">
                <span class="text-white/60">PageSpeed Score</span>
                <span class="text-red-400 font-mono font-semibold">32/100</span>
              </li>
              <li class="flex items-center justify-between">
                <span class="text-white/60">Load Time (LCP)</span>
                <span class="text-red-400 font-mono font-semibold">6.2s</span>
              </li>
              <li class="flex items-center justify-between">
                <span class="text-white/60">Server Response (TTFB)</span>
                <span class="text-red-400 font-mono font-semibold">1.8s</span>
              </li>
              <li class="flex items-center justify-between">
                <span class="text-white/60">Core Web Vitals</span>
                <span class="text-red-400 font-semibold">Failed</span>
              </li>
            </ul>
          </div>

          <!-- After -->
          <div class="card-glass p-8 border-[var(--color-spark-red)]/30">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 rounded-lg bg-green-500/20 flex items-center justify-center">
                <svg class="w-5 h-5 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <h3 class="text-xl font-semibold" style="font-family: var(--font-display);">After SparkHost</h3>
            </div>
            <ul class="space-y-4">
              <li class="flex items-center justify-between">
                <span class="text-white/60">PageSpeed Score</span>
                <span class="text-green-400 font-mono font-semibold">94/100</span>
              </li>
              <li class="flex items-center justify-between">
                <span class="text-white/60">Load Time (LCP)</span>
                <span class="text-green-400 font-mono font-semibold">1.1s</span>
              </li>
              <li class="flex items-center justify-between">
                <span class="text-white/60">Server Response (TTFB)</span>
                <span class="text-green-400 font-mono font-semibold">0.18s</span>
              </li>
              <li class="flex items-center justify-between">
                <span class="text-white/60">Core Web Vitals</span>
                <span class="text-green-400 font-semibold">Passed</span>
              </li>
            </ul>
          </div>
        </div>

        <p class="text-center text-white/40 text-sm mt-6">
          *Actual results from a real client migration. Individual results vary based on site configuration.
        </p>
      </div>
    </section>

    <!-- Plans Comparison -->
    <section class="py-16 border-t border-white/10">
      <div class="container">
        <div class="text-center max-w-2xl mx-auto mb-12">
          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">Choose Your Plan</span>
          <h2 class="text-3xl md:text-4xl font-bold mb-4" style="font-family: var(--font-display);">
            WordPress Hosting <span class="text-gradient-spark">Plans</span>
          </h2>
          <p class="text-white/60">
            All plans include our speed optimisation stack — fast hosting, caching, CDN, and image optimisation.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          <!-- Standard -->
          <div class="card-glass p-8">
            <div class="mb-6">
              <h3 class="text-2xl font-bold mb-2" style="font-family: var(--font-display);">Standard</h3>
              <div class="flex items-baseline gap-1">
                <span class="text-4xl font-bold">€40</span>
                <span class="text-white/50">/month + VAT</span>
              </div>
            </div>
            <ul class="space-y-3 mb-8">
              <li class="flex items-start gap-2 text-white/70">
                <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Fast hosting infrastructure
