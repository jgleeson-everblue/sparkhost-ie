---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const optimisationAreas = [
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M5.25 14.25h13.5m-13.5 0a3 3 0 01-3-3m3 3a3 3 0 100 6h13.5a3 3 0 100-6m-16.5-3a3 3 0 013-3h13.5a3 3 0 013 3m-19.5 0a4.5 4.5 0 01.9-2.7L5.737 5.1a3.375 3.375 0 012.7-1.35h7.126c1.062 0 2.062.5 2.7 1.35l2.587 3.45a4.5 4.5 0 01.9 2.7m0 0a3 3 0 01-3 3m0 3h.008v.008h-.008v-.008zm0-6h.008v.008h-.008v-.008zm-3 6h.008v.008h-.008v-.008zm0-6h.008v.008h-.008v-.008z" /></svg>`,
    title: 'Fast Infrastructure',
    description: 'Premium hosting with sub-200ms response times. Fast infrastructure is the foundation of fast sites.',
    features: ['High-Performance Servers', 'SSD Storage', 'Latest PHP', 'HTTP/3 Support']
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M20.25 6.375c0 2.278-3.694 4.125-8.25 4.125S3.75 8.653 3.75 6.375m16.5 0c0-2.278-3.694-4.125-8.25-4.125S3.75 4.097 3.75 6.375m16.5 0v11.25c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125V6.375m16.5 0v3.75m-16.5-3.75v3.75m16.5 0v3.75C20.25 16.153 16.556 18 12 18s-8.25-1.847-8.25-4.125v-3.75m16.5 0c0 2.278-3.694 4.125-8.25 4.125s-8.25-1.847-8.25-4.125" /></svg>`,
    title: 'Advanced Caching',
    description: 'Multi-layer caching reduces page generation from seconds to milliseconds. Your site stays fast under any load.',
    features: ['Page Caching', 'Object Cache (Redis)', 'Browser Caching', 'OPcache']
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" /></svg>`,
    title: 'Global CDN',
    description: 'Cloudflare edge servers deliver static assets from 300+ locations. Irish visitors get Irish speeds.',
    features: ['Cloudflare CDN', '300+ Edge Locations', 'Auto Minification', 'Brotli Compression']
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" /></svg>`,
    title: 'Image Optimisation',
    description: 'Automatic WebP conversion and compression reduce image sizes by 60-80% without visible quality loss.',
    features: ['WebP Conversion', 'Lossy Compression', 'Lazy Loading', 'Responsive Images']
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5" /></svg>`,
    title: 'Code Optimisation',
    description: 'Minified CSS/JS, deferred loading, and eliminated render-blocking resources for faster page rendering.',
    features: ['CSS/JS Minification', 'Defer Loading', 'Critical CSS', 'Unused Code Removal']
  },
  {
    icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6"><path stroke-linecap="round" stroke-linejoin="round" d="M3.75 3v11.25A2.25 2.25 0 006 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0118 16.5h-2.25m-7.5 0h7.5m-7.5 0l-1 3m8.5-3l1 3m0 0l.5 1.5m-.5-1.5h-9.5m0 0l-.5 1.5M9 11.25v1.5M12 9v3.75m3-6v6" /></svg>`,
    title: 'Database Optimisation',
    description: 'Clean, indexed databases respond faster. We remove bloat and optimise queries for peak performance.',
    features: ['Query Optimisation', 'Index Tuning', 'Bloat Removal', 'Revision Cleanup']
  }
];

const speedStats = [
  { number: '< 1s', label: 'Target load time (LCP)' },
  { number: '40%', label: 'Higher conversion on fast sites' },
  { number: '53%', label: 'Visitors leave if > 3 seconds' },
  { number: '100%', label: 'Google Core Web Vitals focus' }
];

const coreWebVitals = [
  {
    metric: 'LCP',
    name: 'Largest Contentful Paint',
    target: '< 2.5 seconds',
    description: 'How quickly main content loads',
    optimisation: 'Server response, image optimisation, caching'
  },
  {
    metric: 'INP',
    name: 'Interaction to Next Paint',
    target: '< 200ms',
    description: 'How quickly page responds to clicks',
    optimisation: 'JavaScript optimisation, deferred loading'
  },
  {
    metric: 'CLS',
    name: 'Cumulative Layout Shift',
    target: '< 0.1',
    description: 'Visual stability (no jumping content)',
    optimisation: 'Image dimensions, font loading, reserving space'
  }
];

const faqs = [
  {
    question: 'How much faster will my site be after optimisation?',
    answer: 'Results vary based on your starting point, but most sites see 2-5x improvements. A site loading in 6 seconds typically drops to 1-2 seconds. We provide before/after metrics so you can see the exact improvement.'
  },
  {
    question: 'Will speed optimisation break anything on my site?',
    answer: 'We test all optimisations on a staging environment before applying to production. Caching configurations are carefully set to exclude dynamic elements like shopping carts. We monitor for issues post-optimisation and quickly resolve any that arise.'
  },
  {
    question: 'Do I need to change my theme or plugins for better speed?',
    answer: 'Not necessarily. Many speed improvements come from server configuration, caching, and image optimisation — independent of your theme. However, if your theme or certain plugins are fundamentally problematic (like some heavy page builders), we\'ll discuss alternatives.'
  },
  {
    question: 'How do you measure speed improvements?',
    answer: 'We use industry-standard tools: Google PageSpeed Insights, GTmetrix, and Chrome User Experience Report (CrUX) for real-world data. You\'ll receive clear before/after comparisons including Core Web Vitals scores, load times, and server response times.'
  },
  {
    question: 'Is speed optimisation a one-time thing or ongoing?',
    answer: 'Initial optimisation creates the foundation, but speed requires ongoing attention. New content, plugin updates, and WordPress changes can impact performance. Our Managed plans include continuous monitoring and re-optimisation to maintain peak speed.'
  },
  {
    question: 'Will faster speed improve my Google rankings?',
    answer: 'Yes, Core Web Vitals are a confirmed Google ranking factor since 2021. While content quality matters more, passing Core Web Vitals can provide a ranking boost. More importantly, faster sites have lower bounce rates and higher conversions — which indirectly helps SEO.'
  }
];

const relatedPosts = [
  { title: 'WordPress Caching Explained', slug: 'wordpress-caching-explained', category: 'Performance' },
  { title: 'Core Web Vitals Guide', slug: 'core-web-vitals-wordpress', category: 'Performance' },
  { title: 'Image Optimisation Guide', slug: 'image-optimisation-wordpress', category: 'Performance' },
  { title: 'Speed Up WordPress Site', slug: 'speed-up-wordpress-site', category: 'Performance' }
];

const title = 'WordPress Speed Optimisation Ireland | Core Web Vitals & Performance | SparkHost.ie';
const description = 'Make your WordPress site blazing fast. Expert speed optimisation including Core Web Vitals, premium hosting, CDN, caching, and image optimisation for Irish businesses.';
---

<Layout title={title} description={description}>
  <Header />

  <main class="pt-24">
    <!-- Hero Section -->
    <section class="relative overflow-hidden bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900 py-20 lg:py-28">
      <div class="absolute inset-0 bg-[url('/noise.png')] opacity-[0.03]"></div>
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-emerald-500/10 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-cyan-500/10 rounded-full blur-3xl"></div>

      <div class="container mx-auto px-4 relative">
        <div class="max-w-4xl mx-auto text-center">
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-emerald-500/10 border border-emerald-500/20 rounded-full text-emerald-400 text-sm font-medium mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
            </svg>
            Sub-Second Load Times
          </div>

          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
            WordPress Speed
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-emerald-400 to-cyan-400"> That Converts</span>
          </h1>

          <p class="text-xl text-slate-300 mb-8 max-w-2xl mx-auto">
            Every second counts. Slow websites lose customers, hurt rankings, and frustrate visitors. We make WordPress sites fast — properly fast, not just "slightly better" fast.
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/pricing" class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-emerald-500 to-cyan-500 text-white font-semibold rounded-xl hover:shadow-lg hover:shadow-emerald-500/25 transition-all duration-300">
              Get Faster Hosting
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 ml-2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
              </svg>
            </a>
            <a href="/contact" class="inline-flex items-center justify-center px-8 py-4 bg-white/10 text-white font-semibold rounded-xl border border-white/20 hover:bg-white/20 transition-all duration-300">
              Request Speed Audit
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Speed Statistics -->
    <section class="py-12 bg-slate-950 border-y border-slate-800">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          {speedStats.map((stat) => (
            <div class="text-center">
              <div class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-emerald-400 to-cyan-400 mb-2">
                {stat.number}
              </div>
              <div class="text-slate-400 text-sm">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Why Speed Matters -->
    <section class="py-20 bg-slate-900">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
            Why Speed Matters for Irish Businesses
          </h2>
          <p class="text-lg text-slate-300">
            A one-second delay reduces conversions by 7%. For a site doing €100,000/month, that's €7,000 lost — every single month. Speed isn't optional anymore.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          <div class="bg-slate-800/50 rounded-2xl p-8 border border-slate-700/50 text-center">
            <div class="w-16 h-16 rounded-2xl bg-red-500/10 flex items-center justify-center text-red-400 mx-auto mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15m3 0l3-3m0 0l-3-3m3 3H9" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">Visitors Leave</h3>
            <p class="text-slate-400">53% of mobile visitors abandon sites that take longer than 3 seconds to load. You're losing over half your potential customers.</p>
          </div>

          <div class="bg-slate-800/50 rounded-2xl p-8 border border-slate-700/50 text-center">
            <div class="w-16 h-16 rounded-2xl bg-amber-500/10 flex items-center justify-center text-amber-400 mx-auto mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18L9 11.25l4.306 4.307a11.95 11.95 0 015.814-5.519l2.74-1.22m0 0l-5.94-2.28m5.94 2.28l-2.28 5.941" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">Rankings Drop</h3>
            <p class="text-slate-400">Core Web Vitals are a Google ranking factor. Slow sites get pushed down in search results, losing organic traffic to faster competitors.</p>
          </div>

          <div class="bg-slate-800/50 rounded-2xl p-8 border border-slate-700/50 text-center">
            <div class="w-16 h-16 rounded-2xl bg-emerald-500/10 flex items-center justify-center text-emerald-400 mx-auto mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-white mb-3">Revenue Drops</h3>
            <p class="text-slate-400">Amazon found every 100ms of latency costs them 1% in sales. For Irish e-commerce, even small delays mean thousands in lost revenue.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Core Web Vitals Section -->
    <section class="py-20 bg-slate-950">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
            Core Web Vitals: Google's Speed Standards
          </h2>
          <p class="text-lg text-slate-300">
            Google measures three specific metrics that determine if your site passes their speed requirements. We optimise for all three.
          </p>
        </div>

        <div class="max-w-4xl mx-auto space-y-6">
          {coreWebVitals.map((vital) => (
            <div class="bg-slate-900 rounded-2xl p-6 border border-slate-800">
              <div class="flex flex-col md:flex-row md:items-center gap-6">
                <div class="md:w-24 flex-shrink-0">
                  <div class="inline-flex items-center justify-center px-4 py-2 bg-gradient-to-r from-emerald-500/10 to-cyan-500/10 rounded-lg">
                    <span class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-emerald-400 to-cyan-400">{vital.metric}</span>
                  </div>
                </div>
                <div class="flex-1">
                  <div class="flex flex-col sm:flex-row sm:items-center gap-2 mb-2">
                    <h3 class="font-semibold text-white">{vital.name}</h3>
                    <span class="inline-flex items-center px-2 py-1 bg-emerald-500/10 text-emerald-400 text-xs font-medium rounded">
                      Target: {vital.target}
                    </span>
                  </div>
                  <p class="text-slate-400 text-sm mb-2">{vital.description}</p>
                  <p class="text-slate-500 text-sm"><span class="text-slate-400">How we fix it:</span> {vital.optimisation}</p>
                </div>
              </div>
            </div>
          ))}
        </div>

        <div class="text-center mt-10">
          <a href="/blog/core-web-vitals-wordpress" class="inline-flex items-center text-emerald-400 hover:text-emerald-300 font-medium transition-colors">
            Learn more about Core Web Vitals
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4 ml-2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Optimisation Areas Grid -->
    <section class="py-20 bg-slate-900">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
            Our Speed Optimisation Stack
          </h2>
          <p class="text-lg text-slate-300">
            Speed comes from optimising every layer — from server to browser. We address all of them.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
          {optimisationAreas.map((area) => (
            <div class="bg-slate-800/50 rounded-2xl p-6 border border-slate-700/50 hover:border-emerald-500/30 transition-colors">
              <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-emerald-500/10 to-cyan-500/10 flex items-center justify-center text-emerald-400 mb-4" set:html={area.icon}>
              </div>
              <h3 class="text-lg font-semibold text-white mb-2">{area.title}</h3>
              <p class="text-slate-400 text-sm mb-4">{area.description}</p>
              <div class="flex flex-wrap gap-2">
                {area.features.map((feature) => (
                  <span class="px-2 py-1 bg-slate-700/50 text-slate-300 text-xs rounded">
                    {feature}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Before/After Comparison -->
    <section class="py-20 bg-slate-950">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
            Typical Results After Migration
          </h2>
          <p class="text-lg text-slate-300">
            Sites migrating to SparkHost typically see dramatic improvements without any code changes.
          </p>
        </div>

        <div class="max-w-4xl mx-auto">
          <div class="grid md:grid-cols-2 gap-8">
            <!-- Before -->
            <div class="bg-red-950/20 rounded-2xl p-8 border border-red-500/20">
              <div class="flex items-center gap-3 mb-6">
                <div class="w-10 h-10 rounded-full bg-red-500/20 flex items-center justify-center text-red-400">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                </div>
                <h3 class="text-xl font-semibold text-white">Before SparkHost</h3>
              </div>
              <ul class="space-y-4">
                <li class="flex items-center justify-between">
                  <span class="text-slate-400">PageSpeed Score</span>
                  <span class="text-red-400 font-mono font-semibold">32/100</span>
                </li>
                <li class="flex items-center justify-between">
                  <span class="text-slate-400">Load Time (LCP)</span>
                  <span class="text-red-400 font-mono font-semibold">6.2s</span>
                </li>
                <li class="flex items-center justify-between">
                  <span class="text-slate-400">Server Response (TTFB)</span>
                  <span class="text-red-400 font-mono font-semibold">1.8s</span>
                </li>
                <li class="flex items-center justify-between">
                  <span class="text-slate-400">Core Web Vitals</span>
                  <span class="text-red-400 font-semibold">Failed</span>
                </li>
              </ul>
            </div>

            <!-- After -->
            <div class="bg-emerald-950/20 rounded-2xl p-8 border border-emerald-500/20">
              <div class="flex items-center gap-3 mb-6">
                <div class="w-10 h-10 rounded-full bg-emerald-500/20 flex items-center justify-center text-emerald-400">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                  </svg>
                </div>
                <h3 class="text-xl font-semibold text-white">After SparkHost</h3>
              </div>
              <ul class="space-y-4">
                <li class="flex items-center justify-between">
                  <span class="text-slate-400">PageSpeed Score</span>
                  <span class="text-emerald-400 font-mono font-semibold">94/100</span>
                </li>
                <li class="flex items-center justify-between">
                  <span class="text-slate-400">Load Time (LCP)</span>
                  <span class="text-emerald-400 font-mono font-semibold">1.1s</span>
                </li>
                <li class="flex items-center justify-between">
                  <span class="text-slate-400">Server Response (TTFB)</span>
                  <span class="text-emerald-400 font-mono font-semibold">0.18s</span>
                </li>
                <li class="flex items-center justify-between">
                  <span class="text-slate-400">Core Web Vitals</span>
                  <span class="text-emerald-400 font-semibold">Passed</span>
                </li>
              </ul>
            </div>
          </div>

          <p class="text-center text-slate-500 text-sm mt-6">
            *Actual results from a real client migration. Individual results vary based on site configuration.
          </p>
        </div>
      </div>
