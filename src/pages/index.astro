---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import DarkVeil from '../components/DarkVeil';

const stats = [
  { value: '99.9%', label: 'Uptime Guarantee' },
  { value: '<4hrs', label: 'Response Time' },
  { value: '7 Days', label: 'Backup Retention' },
];

const features = [
  {
    icon: 'server',
    title: 'Reliable Hosting',
    description: 'UK/EU servers with 99.9% uptime. Fast load times. Unlimited bandwidth. Your site stays online when it matters.',
  },
  {
    icon: 'refresh',
    title: 'Automatic Updates',
    description: 'WordPress core, plugins, and themes — updated and tested automatically. No more "please update" warnings.',
  },
  {
    icon: 'shield',
    title: 'Real Security',
    description: 'Cloudflare firewall, malware scanning, DDoS protection, and daily backups. If something goes wrong, we fix it.',
  },
  {
    icon: 'support',
    title: 'Irish Support',
    description: 'WhatsApp or email. Same-day responses. Actual humans who understand your business.',
  },
];

const faqs = [
  {
    question: 'What is managed WordPress hosting?',
    answer: "It's hosting plus active maintenance. We don't just give you server space — we keep your WordPress installation updated, secure, backed up, and running fast.",
  },
  {
    question: 'Will you migrate my existing site?',
    answer: 'Yes, at no extra cost. We handle the full migration: files, database, emails, and DNS configuration. Your site stays online throughout.',
  },
  {
    question: 'Do I need to do anything after signing up?',
    answer: 'Almost nothing. We handle everything. You\'ll get monthly reports and can request changes anytime via WhatsApp or email.',
  },
  {
    question: 'Can I cancel anytime?',
    answer: 'Yes. Monthly plans have no long-term contract. We\'d appreciate 30 days notice, but there\'s no cancellation penalty.',
  },
];
---

<Layout
  title="SparkHost.ie - Managed WordPress Hosting Ireland"
  description="Your WordPress site, professionally managed. High-performance hosting, automatic updates, real security, and Irish support. From €40/month."
>
  <Header currentPath="/" />

  <main>
    <!-- ============================================
         HERO SECTION
         ============================================ -->
    <section class="relative min-h-[100vh] flex items-center justify-center overflow-hidden pt-20" id="hero-section">
      <!-- WebGL DarkVeil Background -->
      <div id="darkveil-wrapper" class="absolute inset-0 z-0" style="width: 100%; height: 100%; min-height: 100vh;">
        <DarkVeil
          client:only="react"
          hueShift={-135}
          speed={0.4}
          warpAmount={0.5}
          noiseIntensity={0.015}
        />
      </div>

      <!-- Dark overlay for text readability -->
      <div class="absolute inset-0 z-[1] bg-gradient-to-b from-[var(--color-deep-navy)]/30 via-transparent to-[var(--color-deep-navy)]/50 pointer-events-none"></div>

      <div class="relative z-10 max-w-7xl mx-auto px-6 text-center">
        <!-- Eyebrow badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/5 border border-white/10 mb-8 animate-fade-in">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-green-400"></span>
          </span>
          <span class="text-sm text-white/70">Irish WordPress Hosting</span>
        </div>

        <!-- Main headline -->
        <h1 class="text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-bold tracking-tight mb-6 animate-fade-in-up" style="font-family: var(--font-display);">
          Your WordPress Site,<br />
          <span class="text-gradient-spark">Professionally Managed</span>
        </h1>

        <!-- Subheadline -->
        <p class="text-xl md:text-2xl text-white/60 max-w-3xl mx-auto mb-10 animate-fade-in-up stagger-2">
          High-performance hosting, automatic updates, real security, and Irish support. From €40/month.
        </p>

        <!-- CTA buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-fade-in-up stagger-3">
          <a href="/pricing" class="btn-spark text-lg py-4 px-8">
            <span>View Plans</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          <a href="/contact" class="btn-outline text-lg py-4 px-8">
            <span>Book a Free Call</span>
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </a>
        </div>

        <!-- Trust badges -->
        <div class="flex flex-wrap justify-center gap-6 mt-16 animate-fade-in-up stagger-4">
          <div class="flex items-center gap-2 text-white/50 text-sm">
            <svg class="w-5 h-5 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            99.9% Uptime
          </div>
          <div class="flex items-center gap-2 text-white/50 text-sm">
            <svg class="w-5 h-5 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            Irish Support Team
          </div>
          <div class="flex items-center gap-2 text-white/50 text-sm">
            <svg class="w-5 h-5 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            GDPR Compliant
          </div>
          <div class="flex items-center gap-2 text-white/50 text-sm">
            <svg class="w-5 h-5 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
            </svg>
            Daily Backups
          </div>
        </div>
      </div>

      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
        <svg class="w-6 h-6 text-white/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </div>
    </section>

    <!-- ============================================
         PROBLEM/SOLUTION SECTION
         ============================================ -->
    <section class="relative py-32 overflow-hidden">
      <div class="max-w-7xl mx-auto px-6">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <!-- Problem side -->
          <div class="relative" data-animate="slide-left">
            <div class="absolute -top-4 -left-4 w-24 h-24 bg-[var(--color-spark-red)]/10 rounded-full blur-2xl"></div>
            <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">The Problem</span>
            <h2 class="text-4xl md:text-5xl font-bold mb-6" style="font-family: var(--font-display);">
              Your Website Shouldn't Keep You Up at Night
            </h2>
            <p class="text-lg text-white/60 leading-relaxed mb-6">
              You built your business. Your website should support it — not drain your time with plugin updates, security scares, and hosting headaches.
            </p>
            <p class="text-lg text-white/60 leading-relaxed">
              Most Irish businesses are stuck between two bad options: expensive agencies that charge €150/hour for basic updates, or DIY maintenance that eats into time you don't have.
            </p>
          </div>

          <!-- Solution side -->
          <div class="relative" data-animate="slide-right" data-delay="200">
            <div class="card-glass card-shine p-8 md:p-10">
              <div class="absolute -top-px left-1/2 -translate-x-1/2 w-1/2 h-px bg-gradient-to-r from-transparent via-[var(--color-spark-red)] to-transparent"></div>
              <span class="inline-block text-green-400 text-sm font-semibold tracking-wider uppercase mb-4">The Solution</span>
              <h3 class="text-2xl md:text-3xl font-bold mb-6" style="font-family: var(--font-display);">
                SparkHost is the third option.
              </h3>
              <p class="text-white/60 leading-relaxed mb-8">
                Professional WordPress management at a fixed monthly price. We handle the technical work. You focus on your business.
              </p>
              <ul class="space-y-4">
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-white/70">Free migration from your current host</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-white/70">Fixed monthly pricing — no surprises</span>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-green-400 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-white/70">Same-day support via WhatsApp or email</span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ============================================
         HOW IT WORKS SECTION (LIGHT)
         ============================================ -->
    <section class="section-light relative py-32 overflow-hidden">
      <div class="relative z-10 max-w-7xl mx-auto px-6">
        <div class="text-center mb-20" data-animate="fade-up">
          <span class="inline-block text-[var(--color-spark-red)] text-sm font-semibold tracking-wider uppercase mb-4">How It Works</span>
          <h2 class="text-4xl md:text-5xl font-bold text-[var(--color-text-dark)]" style="font-family: var(--font-display);">
            Set It and <span class="text-gradient-spark">Forget It</span>
          </h2>
        </div>

        <div class="grid md:grid-cols-3 gap-8" data-animate-stagger>
          <!-- Step 1 -->
          <div class="relative group">
            <div class="card-light p-8 h-full">
              <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-[var(--color-spark-red)] to-[var(--color-spark-orange)] flex items-center justify-center mb-6 group-hover:scale-110 transition-transform shadow-lg shadow-[var(--color-spark-red)]/20">
                <span class="text-2xl font-bold text-white" style="font-family: var(--font-display);">1</span>
              </div>
              <h3 class="text-xl font-bold mb-4 text-[var(--color-text-dark)]" style="font-family: var(--font-display);">We Migrate Your Site</h3>
              <p class="text-gray-600 leading-relaxed">
                We handle the full migration from your current host — files, database, emails, DNS. Zero downtime. No technical work on your end.
              </p>
            </div>
            <!-- Connector line -->
            <div class="hidden md:block absolute top-1/2 -right-4 w-8 h-0.5 bg-gradient-to-r from-[var(--color-spark-red)]/50 to-transparent"></div>
          </div>

          <!-- Step 2 -->
          <div class="relative group">
            <div class="card-light p-8 h-full">
              <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-[var(--color-spark-red)] to-[var(--color-spark-orange)] flex items-center justify-center mb-6 group-hover:scale-110 transition-transform shadow-lg shadow-[var(--color-spark-red)]/20">
                <span class="text-2xl font-bold text-white" style="font-family: var(--font-display);">2</span>
              </div>
              <h3 class="text-xl font-bold mb-4 text-[var(--color-text-dark)]" style="font-family: var(--font-display);">We Manage Everything</h3>
              <p class="text-gray-600 leading-relaxed">
                Updates, backups, security monitoring, performance optimisation. All automatic, all included. You get monthly reports showing exactly what we've done.
              </p>
            </div>
            <div class="hidden md:block absolute top-1/2 -right-4 w-8 h-0.5 bg-gradient-to-r from-[var(--color-spark-red)]/50 to-transparent"></div>
          </div>

          <!-- Step 3 -->
          <div class="relative group">
            <div class="card-light p-8 h-full">
              <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-[var(--color-spark-red)] to-[var(--color-spark-orange)] flex items-center justify-center mb-6 group-hover:scale-110 transition-transform shadow-lg shadow-[var(--color-spark-red)]/20">
                <span class="text-2xl font-bold text-white" style="font-family: var(--font-display);">3</span>
              </div>
              <h3 class="text-xl font-bold mb-4 text-[var(--color-text-dark)]" style="font-family: var(--font-display);">You Get On With Business</h3>
              <p class="text-gray-600 leading-relaxed">
                Need a change? Send a WhatsApp. We respond same-day, usually within hours. No tickets. No waiting. No jargon.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ============================================
         FEATURES SECTION
         ============================================ -->
    <section class="relative py-32 overflow-hidden">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-20" data-animate="fade-up">
          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">What's Included</span>
          <h2 class="text-4xl md:text-5xl font-bold" style="font-family: var(--font-display);">
            Everything You Need, <span class="text-gradient-spark">Nothing You Don't</span>
          </h2>
        </div>

        <div class="grid md:grid-cols-2 gap-8" data-animate-stagger>
          {features.map((feature, index) => (
            <div class="card-glass card-shine p-8 group">
              <div class="flex items-start gap-6">
                <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-[var(--color-spark-red)]/20 to-[var(--color-spark-orange)]/20 flex items-center justify-center flex-shrink-0 group-hover:from-[var(--color-spark-red)]/30 group-hover:to-[var(--color-spark-orange)]/30 transition-all">
                  {feature.icon === 'server' && (
                    <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
                    </svg>
                  )}
                  {feature.icon === 'refresh' && (
                    <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                  )}
                  {feature.icon === 'shield' && (
                    <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                  )}
                  {feature.icon === 'support' && (
                    <svg class="w-6 h-6 text-[var(--color-spark-orange)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                  )}
                </div>
                <div>
                  <h3 class="text-xl font-bold mb-3" style="font-family: var(--font-display);">{feature.title}</h3>
                  <p class="text-white/60 leading-relaxed">{feature.description}</p>
                </div>
              </div>
            </div>
          ))}
        </div>

        <div class="text-center mt-12">
          <a href="/services" class="inline-flex items-center gap-2 text-[var(--color-spark-orange)] hover:text-[var(--color-spark-red)] font-medium transition-colors">
            See all features
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- ============================================
         STATS/SOCIAL PROOF SECTION
         ============================================ -->
    <section class="relative py-32 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-[var(--color-spark-red)]/5 via-transparent to-[var(--color-spark-orange)]/5"></div>

      <div class="relative z-10 max-w-7xl mx-auto px-6">
        <div class="text-center mb-16" data-animate="fade-up">
          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">Trusted by Irish Businesses</span>
          <h2 class="text-4xl md:text-5xl font-bold" style="font-family: var(--font-display);">
            The Numbers Speak
          </h2>
        </div>

        <div class="grid md:grid-cols-3 gap-8 mb-20" data-animate-stagger>
          {stats.map(stat => (
            <div class="text-center">
              <div class="text-5xl md:text-6xl font-bold text-gradient-spark mb-2" style="font-family: var(--font-display);">
                {stat.value}
              </div>
              <p class="text-white/60">{stat.label}</p>
            </div>
          ))}
        </div>

        <!-- Testimonial placeholder -->
        <div class="max-w-3xl mx-auto" data-animate="fade-in-scale">
          <div class="card-glass card-shine p-8 md:p-12 text-center relative">
            <svg class="w-12 h-12 text-[var(--color-spark-red)]/30 mx-auto mb-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
            </svg>
            <p class="text-xl md:text-2xl text-white/80 leading-relaxed mb-8 italic">
              "Finally, a hosting service that just works. No more 3am panic about updates breaking the site. SparkHost handles everything."
            </p>
            <div>
              <p class="font-semibold text-white">Sarah Murphy</p>
              <p class="text-white/50 text-sm">Marketing Director, Dublin</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ============================================
         PRICING PREVIEW SECTION
         ============================================ -->
    <section class="relative py-32 overflow-hidden">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-16" data-animate="fade-up">
          <span class="inline-block text-[var(--color-spark-orange)] text-sm font-semibold tracking-wider uppercase mb-4">Simple Pricing</span>
          <h2 class="text-4xl md:text-5xl font-bold mb-4" style="font-family: var(--font-display);">
            Transparent. <span class="text-gradient-spark">No Surprises.</span>
          </h2>
          <p class="text-xl text-white/60 max-w-2xl mx-auto">
            Pick the plan that fits your business. Both include migration, hosting, updates, security, and Irish support.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto" data-animate-stagger>
          <!-- Standard Plan -->
          <div class="card-glass card-shine p-8 relative group">
            <div class="mb-6">
              <h3 class="text-2xl font-bold mb-2" style="font-family: var(--font-display);">Standard</h3>
              <p class="text-white/50">Everything you need to keep your site running</p>
            </div>
            <div class="mb-8">
              <span class="text-5xl font-bold" style="font-family: var(--font-display);">€40</span>
              <span class="text-white/50">/month + VAT</span>
            </div>
            <ul class="space-y-4 mb-8">
              <li class="flex items-center gap-3 text-white/70">
                <svg class="w-5 h-5 text-green-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                High-performance VPS hosting
              </li>
              <li class="flex items-center gap-3 text-white/70">
                <svg class="w-5 h-5 text-green-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Daily backups (7-day retention)
              </li>
              <li class="flex items-center gap-3 text-white/70">
                <svg class="w-5 h-5 text-green-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Automatic updates & security
              </li>
              <li class="flex items-center gap-3 text-white/70">
                <svg class="w-5 h-5 text-green-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                WhatsApp & email support
