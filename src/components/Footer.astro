---
const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { href: '/services', label: 'Services' },
    { href: '/pricing', label: 'Pricing' },
    { href: '/get-started', label: 'Get Started' },
  ],
  company: [
    { href: '/about', label: 'About Us' },
    { href: '/blog', label: 'Blog' },
    { href: '/contact', label: 'Contact' },
  ],
  support: [
    { href: '/faq', label: 'FAQ' },
    { href: 'mailto:hello@sparkhost.ie', label: 'Email Support' },
  ],
  legal: [
    { href: '/privacy', label: 'Privacy Policy' },
    { href: '/terms', label: 'Terms of Service' },
    { href: '/cookies', label: 'Cookie Policy' },
  ]
};
---

<footer class="relative mt-32 border-t border-white/5">
  <!-- Gradient glow at top -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-1/2 h-px bg-gradient-to-r from-transparent via-[var(--color-spark-red)]/50 to-transparent"></div>

  <div class="max-w-7xl mx-auto px-6 py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-8 lg:gap-12">
      <!-- Brand Column -->
      <div class="col-span-2 md:col-span-4 lg:col-span-1 mb-8 lg:mb-0">
        <a href="/" class="inline-block mb-6">
          <img src="/sparkhost-light.svg" alt="SparkHost" class="h-9 w-auto" />
        </a>
        <p class="text-white/50 text-sm leading-relaxed mb-6 max-w-xs">
          Professional WordPress hosting and maintenance for Irish businesses. Your site, professionally managed.
        </p>
        <!-- Trust badges -->
        <div class="flex flex-wrap gap-3">
          <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-white/5 border border-white/10 text-xs text-white/60">
            <span class="w-1.5 h-1.5 rounded-full bg-green-400 animate-pulse"></span>
            99.9% Uptime
          </span>
          <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-white/5 border border-white/10 text-xs text-white/60">
            GDPR Compliant
          </span>
        </div>
      </div>

      <!-- Product Links -->
      <div>
        <h4 class="font-semibold text-white mb-4 text-sm uppercase tracking-wider">Product</h4>
        <ul class="space-y-3">
          {footerLinks.product.map(link => (
            <li>
              <a href={link.href} class="text-white/50 hover:text-[var(--color-spark-orange)] transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h4 class="font-semibold text-white mb-4 text-sm uppercase tracking-wider">Company</h4>
        <ul class="space-y-3">
          {footerLinks.company.map(link => (
            <li>
              <a href={link.href} class="text-white/50 hover:text-[var(--color-spark-orange)] transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Support Links -->
      <div>
        <h4 class="font-semibold text-white mb-4 text-sm uppercase tracking-wider">Support</h4>
        <ul class="space-y-3">
          {footerLinks.support.map(link => (
            <li>
              <a href={link.href} class="text-white/50 hover:text-[var(--color-spark-orange)] transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal Links -->
      <div>
        <h4 class="font-semibold text-white mb-4 text-sm uppercase tracking-wider">Legal</h4>
        <ul class="space-y-3">
          {footerLinks.legal.map(link => (
            <li>
              <a href={link.href} class="text-white/50 hover:text-[var(--color-spark-orange)] transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-white/40 text-sm">
        &copy; {currentYear} SparkHost.ie. All rights reserved.
      </p>
      <p class="text-white/40 text-sm">
        A service by <a href="https://everbluedigital.com" target="_blank" rel="noopener" class="text-[var(--color-spark-orange)] hover:underline">Everblue Digital</a>
      </p>
    </div>
  </div>
</footer>
